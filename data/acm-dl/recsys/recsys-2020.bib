doi = {10.1145/3383313.3412219},
abstract = { We introduce a simple autoencoder based on hyperbolic geometry for solving standard collaborative filtering problem. In contrast to many modern deep learning techniques, we build our solution using only a single hidden layer. Remarkably, even with such a minimalistic approach, we not only outperform the Euclidean counterpart but also achieve a competitive performance with respect to the current state-of-the-art. We additionally explore the effects of space curvature on the quality of hyperbolic models and propose an efficient data-driven method for estimating its optimal value.},
booktitle = {Fourteenth ACM Conference on Recommender Systems},
pages = {527–532},
numpages = {6},
keywords = {Top-N Recommendation, Collaborative Filtering, Hyperbolic Geometry, Autoencoders},
location = {Virtual Event, Brazil},
