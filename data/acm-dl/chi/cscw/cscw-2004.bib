series = {CSCW '04}
}

@inproceedings{10.1145/1031607.1031642,
author = {Beenen, Gerard and Ling, Kimberly and Wang, Xiaoqing and Chang, Klarissa and Frankowski, Dan and Resnick, Paul and Kraut, Robert E.},
