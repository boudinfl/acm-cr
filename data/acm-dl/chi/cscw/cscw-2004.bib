booktitle = {Proceedings of the 2004 ACM Conference on Computer Supported Cooperative Work},
pages = {192–201},
numpages = {10},
keywords = {awarephone, pervasive healthcare, mobile computing, ubiquitous computing, social awareness, context-aware computing},
location = {Chicago, Illinois, USA},
