booktitle = {Proceedings of the 2004 ACM Conference on Computer Supported Cooperative Work},
pages = {604–613},
numpages = {10},
keywords = {CSCW, collaborative writing, coordination mechanisms, distributed work, cross-cultural communication, empirical studies, intellectual teamwork},
