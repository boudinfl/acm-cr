@inproceedings{10.1145/1031607.1031628,
author = {Barley, Stephen R. and Dutton, William H. and Kiesler, Sara and Resnick, Paul and Kraut, Robert E. and Yates, JoAnne},
title = {Does CSCW Need Organization Theory?},
year = {2004},
isbn = {1581138105},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1031607.1031628},
