@inproceedings{10.1145/1031607.1031662,
author = {Winberg, Fredrik and Bowers, John},
title = {Assembling the Senses: Towards the Design of Cooperative Interfaces for Visually Impaired Users},
year = {2004},
isbn = {1581138105},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1031607.1031662},
