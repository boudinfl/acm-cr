@inproceedings{10.1145/3334480.3383042,
author = {Georges, Vanessa and Courtemanche, Fran\c{c}ois and Fredette, Marc and Doyon-Poulin, Philippe},
title = {Emotional Maps for User Experience Research in the Wild},
