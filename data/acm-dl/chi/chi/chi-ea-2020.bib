@inproceedings{10.1145/3334480.3382957,
author = {Ranasinghe, Champika and Holl\"{a}nder, Kai and Currano, Rebecca and Sirkin, David and Moore, Dylan and Schneegass, Stefan and Ju, Wendy},
title = {Autonomous Vehicle-Pedestrian Interaction Across Cultures: Towards Designing Better External Human Machine Interfaces (EHMIs)},
