pages = {1–8},
numpages = {8},
keywords = {spatial aggregation, focus+context, geographic visualization, level of details, exploratory spatial data analysis, lens, quard-tree, multi-resolution, clutter reduction, spatial clustering},
location = {Honolulu, HI, USA},
series = {CHI EA '20}
}

