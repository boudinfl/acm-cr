title = {ARphy: Managing Photo Collections Using Physical Objects in AR},
year = {2020},
isbn = {9781450368193},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3334480.3382885},
