}

@inproceedings{10.1145/3334480.3382823,
author = {Beneteau, Erin and Mishra, Sonali R. and Haldar, Shefali and Apodaca, Calvin and Pollack, Ari and Pratt, Wanda},
title = {Where Are My Parents?: Information Needs of Hospitalized Children},
year = {2020},
isbn = {9781450368193},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3334480.3382823},
