@inproceedings{10.1145/3334480.3382787,
author = {Taber, Lee and May, Paul and Yahn-Krafft, Keane and Whittaker, Steve},
title = {Beyond Avoidance and Passivity: Novel UIs to Make Terms of Service Comprehensible},
