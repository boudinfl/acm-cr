booktitle = {Extended Abstracts of the 2020 CHI Conference on Human Factors in Computing Systems},
pages = {1–8},
numpages = {8},
keywords = {communication, user interfaces, small group discussions, automatic speech recognition, speaking behavior, deaf and hard of hearing, accessibility},
