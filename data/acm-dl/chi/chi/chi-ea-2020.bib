@inproceedings{10.1145/3334480.3382849,
author = {Niijima, Arinobu and Takeda, Toki and Mukouchi, Takafumi and Satou, Takashi},
title = {ThermalBitDisplay: Haptic Display Providing Thermal Feedback Perceived Differently Depending on Body Parts},
