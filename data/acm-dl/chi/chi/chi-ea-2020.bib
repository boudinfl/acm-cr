@inproceedings{10.1145/3334480.3382790,
author = {Salminen, Joni and Froneman, Willemien and Jung, Soon-gyo and Chowdhury, Shammur and Jansen, Bernard J.},
title = {The Ethics of Data-Driven Personas},
year = {2020},
