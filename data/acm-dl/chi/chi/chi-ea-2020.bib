}

@inproceedings{10.1145/3334480.3382822,
author = {Wu, Yuxing and Krebs, Elisa and Hassan Shankaranand, Adithya and Shih, Patrick and Chung, Chia-Fang},
title = {Meal Chat: Promoting Mealtime Social Interaction for College Students},
