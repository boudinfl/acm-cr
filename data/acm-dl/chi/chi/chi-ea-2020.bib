author = {Kirshenbaum, Nurit and Hutchison, James and Theriot, Ryan and Kobayashi, Dylan and Leigh, Jason},
title = {Data in Context: Engaging Audiences with 3D Physical Geo-Visualization},
year = {2020},
isbn = {9781450368193},
