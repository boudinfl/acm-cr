@inproceedings{10.1145/1518701.1518936,
author = {Choi, Minwoo and Kim, Gerard Jounghyun},
title = {TouchBall: A Design and Evaluation of a Hand-Held Trackball Based Touch-Haptic Interface},
year = {2009},
isbn = {9781605582467},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1518701.1518936},
