@inproceedings{10.1145/1518701.1519040,
author = {Gaver, William and Bowers, John and Kerridge, Tobie and Boucher, Andy and Jarvis, Nadine},
title = {Anatomy of a Failure: How We Knew When Our Design Went Wrong, and What We Learned from It},
year = {2009},
