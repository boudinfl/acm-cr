@inproceedings{10.1145/1518701.1519021,
author = {Takayama, Leila and Groom, Victoria and Nass, Clifford},
title = {I'm Sorry, Dave: I'm Afraid i Won't Do That: Social Aspects of Human-Agent Conflict},
