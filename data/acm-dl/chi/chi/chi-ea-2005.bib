pages = {1781–1784},
numpages = {4},
keywords = {popup menu, computer supported cooperative work (CSCW), tabletop display, drag and drop},
location = {Portland, OR, USA},
series = {CHI EA '05}
}

@inproceedings{10.1145/1056808.1057022,
author = {Skeels, Meredith M. and Henning, Kiera and Yildiz, Meliha Yetisgen and Pratt, Wanda},
title = {Interaction Design for Literature-Based Discovery},
