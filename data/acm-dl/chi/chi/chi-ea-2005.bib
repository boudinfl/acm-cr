@inproceedings{10.1145/1056808.1057041,
author = {Vertegaal, Roel and Mamuji, Aadil and Sohn, Changuk and Cheng, Daniel},
title = {Media Eyepliances: Using Eye Tracking for Remote Control Focus Selection of Appliances},
year = {2005},
isbn = {1595930027},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1056808.1057041},
