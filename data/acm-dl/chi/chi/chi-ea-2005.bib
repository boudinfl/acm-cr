@inproceedings{10.1145/1056808.1056939,
author = {Herder, Eelco and Weinreich, Harald},
title = {Interactive Web Usage Mining with the Navigation Visualizer},
year = {2005},
isbn = {1595930027},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1056808.1056939},
doi = {10.1145/1056808.1056939},
