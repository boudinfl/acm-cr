@inproceedings{10.1145/1056808.1057037,
author = {Turski, Andrzej and Warnack, Debbie and Cheng, Lili and Farnham, Shelly and Yee, Susan},
title = {Inner Circle: People Centered Email Client},
year = {2005},
isbn = {1595930027},
