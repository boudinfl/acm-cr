@inproceedings{10.1145/1056808.1056983,
author = {Marsh, Tim and Yang, Kiyoung and Shahabi, Cyrus and Wong, Wee Ling and Nocera, Luciano and Carriazo, Eduardo and Varma, Aditya and Yoon, Hyunjin and Kyriakakis, Chris},
title = {Automating the Detection of Breaks in Continuous User Experience with Computer Games},
year = {2005},
isbn = {1595930027},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1056808.1056983},
