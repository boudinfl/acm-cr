@inproceedings{10.1145/1056808.1057042,
author = {Wilson, Daniel H. and Long, Anna C. and Atkeson, Chris},
title = {A Context-Aware Recognition Survey for Data Collection Using Ubiquitous Sensors in the Home},
year = {2005},
isbn = {1595930027},
publisher = {Association for Computing Machinery},
