booktitle = {CHI '12 Extended Abstracts on Human Factors in Computing Systems},
pages = {1703–1708},
numpages = {6},
keywords = {system design, laboratory experiment, theory, technology acceptance and usage, trust},
location = {Austin, Texas, USA},
series = {CHI EA '12}
}

