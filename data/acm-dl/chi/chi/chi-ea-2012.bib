title = {Understanding Effects of Time and Proximity on Collaboration: Implications for Technologies to Support Collaborative Information Seeking},
year = {2012},
isbn = {9781450310161},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2212776.2223713},
