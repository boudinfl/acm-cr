@inproceedings{10.1145/2212776.2223715,
author = {Hesselmann, Tobias and Goll\"{u}cke, Volker and Poppinga, Benjamin and Heuten, Wilko and Boll, Susanne},
title = {Drawing Shapes and Lines: Spawning Objects on Interactive Tabletops},
year = {2012},
isbn = {9781450310161},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2212776.2223715},
