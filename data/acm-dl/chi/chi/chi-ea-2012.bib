@inproceedings{10.1145/2212776.2223696,
author = {S\"{o}llner, Matthias and Hoffmann, Axel and Hoffmann, Holger and Leimeister, Jan Marco},
title = {How to Use Behavioral Research Insights on Trust for HCI System Design},
year = {2012},
isbn = {9781450310161},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2212776.2223696},
