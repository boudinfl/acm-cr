series = {CHI '08}
}

@inproceedings{10.1145/1357054.1357265,
author = {Dachselt, Raimund and Frisch, Mathias and Weiland, Markus},
title = {FacetZoom: A Continuous Multi-Scale Widget for Navigating Hierarchical Metadata},
year = {2008},
isbn = {9781605580111},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1357054.1357265},
