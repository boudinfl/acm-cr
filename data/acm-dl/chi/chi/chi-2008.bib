}

@inproceedings{10.1145/1357054.1357270,
author = {Tanvir, Erum and Cullen, Jonathan and Irani, Pourang and Cockburn, Andy},
title = {AAMU: Adaptive Activation Area Menus for Improving Selection in Cascading Pull-down Menus},
