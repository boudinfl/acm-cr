@inproceedings{10.1145/3170427.3186479,
author = {Goguey, Alix and Casiez, G\'{e}ry and Cockburn, Andy and Gutwin, Carl},
title = {Storyboard-Based Empirical Modelling of Touch Interface Performance},
year = {2018},
