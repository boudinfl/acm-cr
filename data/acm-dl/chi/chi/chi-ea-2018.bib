@inproceedings{10.1145/3170427.3188469,
author = {Robinson, Raquel and Murray, John and Isbister, Katherine},
title = {"You're Giving Me Mixed Signals!": A Comparative Analysis of Methods That Capture Players' Emotional Response to Games},
year = {2018},
isbn = {9781450356213},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3170427.3188469},
doi = {10.1145/3170427.3188469},
abstract = {In this paper, we describe a comparative analysis of several emotional reporting techniques for assessing gameplay experience. We compared newer feedback methods, such as the Sensual Evaluation Instrument (SEI) and recent tools for capturing physiological data, with more traditional techniques such as think-aloud, the Immersive Experience Questionnaire (IEQ), and retrospective interviews. We present results from an exploratory study with 7 participants who all played the same game and gave feedback on their emotional experience using this suite of methods. Preliminary results indicated that mixed methods offer complementary strengths in registering player emotion, are useful at different moments of play, and help to accommodate differences in the ways players' emotions manifest. We argue for the value of using multiple methods in evaluating players' emotional response to games.},
booktitle = {Extended Abstracts of the 2018 CHI Conference on Human Factors in Computing Systems},
pages = {1–6},
numpages = {6},
keywords = {ieq, player experience, biometrics, emotional response, questionnaires, think-aloud},
location = {Montreal QC, Canada},
series = {CHI EA '18}
}

@inproceedings{10.1145/3170427.3188541,
author = {Rowe, Elizabeth and Asbell-Clarke, Jodi and Baker, Ryan and Gasca, Santiago and Bardar, Erin and Scruggs, Richard},
