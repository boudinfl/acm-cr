booktitle = {Extended Abstracts of the 2018 CHI Conference on Human Factors in Computing Systems},
pages = {1–6},
numpages = {6},
keywords = {wearable virtual reality (wvr), data gathering, neurodevelopmental disorders, wearable bio-sensors},
