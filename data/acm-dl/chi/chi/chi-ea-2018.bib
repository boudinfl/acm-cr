@inproceedings{10.1145/3170427.3188566,
author = {Kim, Seoyoung and Ha, Jiyoun and Kim, Juho},
title = {Detecting Personality Unobtrusively from Users' Online and Offline Workplace Behaviors},
year = {2018},
isbn = {9781450356213},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3170427.3188566},
doi = {10.1145/3170427.3188566},
abstract = {Personality affects various social behaviors of an individual, such as collaboration, group dynamics, and social relationships within the workplace. However, existing methods for assessing personality have shortcomings: self-assessed methods are cumbersome due to repeated assessment and erroneous due to a self-report bias. On the other hand, automatic, data-driven personality detection raises privacy concerns due to a need for excessive personal data. We present an unobtrusive method for detecting personality within the workplace that combines a user's online and offline behaviors. We report insights from analyzing data collected from four different workplaces with 37 participants, which shows that complementing online and offline data allows a more complete reflection of an individual's personality. We also present possible applications of unobtrusive personality detection in the workplace.},
booktitle = {Extended Abstracts of the 2018 CHI Conference on Human Factors in Computing Systems},
pages = {1–6},
numpages = {6},
keywords = {automatic personality assessment, large-scale data, behavior observation, personality-based balancing, personality detection},
location = {Montreal QC, Canada},
series = {CHI EA '18}
}

@inproceedings{10.1145/3170427.3188604,
author = {Kasra, Mona and Shen, Cuihua and O'Brien, James F.},
title = {Seeing Is Believing: How People Fail to Identify Fake Images on the Web},
year = {2018},
isbn = {9781450356213},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3170427.3188604},
doi = {10.1145/3170427.3188604},
abstract = {The growing ease with which digital images can be convincingly manipulated and widely distributed on the Internet makes viewers increasingly susceptible to visual misinformation and deception. In situations where ill-intentioned individuals seek to deliberately mislead and influence viewers through fake online images, the harmful consequences could be substantial. We describe an exploratory study of how individuals react, respond to, and evaluate the authenticity of images that accompany online stories in Internet-enabled communications channels. Our preliminary findings support the assertion that people perform poorly at detecting skillful image manipulation, and that they often fail to question the authenticity of images even when primed regarding image forgery through discussion. We found that viewers make credibility evaluation based mainly on non-image cues rather than the content depicted. Moreover, our study revealed that in cases where context leads to suspicion, viewers apply post-hoc analysis to support their suspicions regarding the authenticity of the image.},
booktitle = {Extended Abstracts of the 2018 CHI Conference on Human Factors in Computing Systems},
pages = {1–6},
numpages = {6},
keywords = {image credibility, image manipulation, fake images, focus study, credibility evaluation, online images},
location = {Montreal QC, Canada},
series = {CHI EA '18}
}

@inproceedings{10.1145/3170427.3188533,
author = {Johnson, Jeff and Hastak, Manoj and Jansen, Bernard J. and Raval, Devesh},
