booktitle = {Proceedings of the 29th Annual Symposium on User Interface Software and Technology},
pages = {687–695},
numpages = {9},
keywords = {conductive ink, reconfigurability, circuit prototyping, hybrid system, reusability, printable circuits, breadboard},
