@inproceedings{10.1145/2984511.2984579,
author = {Lo, Joanne and Torres, Cesar and Yang, Isabel and O'Leary, Jasper and Kaufman, Danny and Li, Wilmot and Dontcheva, Mira and Paulos, Eric},
title = {Aesthetic Electronics: Designing, Sketching, and Fabricating Circuits through Digital Exploration},
year = {2016},
