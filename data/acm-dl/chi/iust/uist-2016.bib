@inproceedings{10.1145/2984511.2984569,
author = {Truong, Anh and Berthouzoz, Floraine and Li, Wilmot and Agrawala, Maneesh},
title = {QuickCut: An Interactive Tool for Editing Narrated Video},
year = {2016},
isbn = {9781450341899},
