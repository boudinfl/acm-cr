@inproceedings{10.1145/2984511.2984520,
author = {Ou, Jifei and Skouras, M\'{e}lina and Vlavianos, Nikolaos and Heibeck, Felix and Cheng, Chin-Yi and Peters, Jannik and Ishii, Hiroshi},
title = {AeroMorph - Heat-Sealing Inflatable Shape-Change Materials for Interaction Design},
year = {2016},
isbn = {9781450341899},
publisher = {Association for Computing Machinery},
