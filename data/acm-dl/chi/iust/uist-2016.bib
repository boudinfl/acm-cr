@inproceedings{10.1145/2984511.2984586,
author = {Roumen, Thijs and Kruck, Bastian and D\"{u}rschmid, Tobias and Nack, Tobias and Baudisch, Patrick},
title = {Mobile Fabrication},
year = {2016},
isbn = {9781450341899},
