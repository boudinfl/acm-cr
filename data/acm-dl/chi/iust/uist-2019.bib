@inproceedings{10.1145/3332165.3347953,
author = {Temma, Ryotaro and Takashima, Kazuki and Fujita, Kazuyuki and Sueda, Koh and Kitamura, Yoshifumi},
title = {Third-Person Piloting: Increasing Situational Awareness Using a Spatially Coupled Second Drone},
year = {2019},
isbn = {9781450368162},
publisher = {Association for Computing Machinery},
