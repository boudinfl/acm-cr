@inproceedings{10.1145/3266037.3271642,
author = {Onorati, Teresa and D\'{\i}az, Paloma and Zarraonandia, Telmo and Aedo, Ignacio},
title = {The Immersive Bubble Chart: A Semantic and Virtual Reality Visualization for Big Data},
