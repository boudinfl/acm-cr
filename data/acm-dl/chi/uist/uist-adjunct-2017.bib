booktitle = {Adjunct Publication of the 30th Annual ACM Symposium on User Interface Software and Technology},
pages = {99–102},
numpages = {4},
keywords = {virtual reality, interaction, design tools, audio, 3d printing, physics-based simulation, computational fabrication},
