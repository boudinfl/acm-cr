booktitle = {Adjunct Publication of the 30th Annual ACM Symposium on User Interface Software and Technology},
pages = {91–94},
numpages = {4},
keywords = {non-contact tactile display, wearable tactile display, airflow display, airflow-based stimulation},
location = {Qu\'{e}bec City, QC, Canada},
series = {UIST '17}
}

@inproceedings{10.1145/3131785.3131841,
author = {Lee, Sang Won},
