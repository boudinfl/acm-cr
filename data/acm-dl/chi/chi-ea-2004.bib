booktitle = {CHI '04 Extended Abstracts on Human Factors in Computing Systems},
pages = {1147–1150},
numpages = {4},
keywords = {temporal visualization, timelines, medical records, ethnographic observations, screen design, interaction design},
location = {Vienna, Austria},
series = {CHI EA '04}
}

@inproceedings{10.1145/985921.986011,
