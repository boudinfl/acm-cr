author = {Jonsson, Ing-Marie and Nass, Clifford and Endo, Jack and Reaves, Ben and Harris, Helen and Ta, Janice Le and Chan, Nicholas and Knapp, Sean},
title = {Don't Blame Me I Am Only the Driver: Impact of Blame Attribution on Attitudes and Attention to Driving Task},
year = {2004},
isbn = {1581137036},
publisher = {Association for Computing Machinery},
