booktitle = {Proceedings of the 2016 CHI Conference Extended Abstracts on Human Factors in Computing Systems},
pages = {3770–3773},
numpages = {4},
keywords = {fat finger problem, fixed cursor and movable keyboard, ultra-small touchscreens, text entry},
location = {San Jose, California, USA},
series = {CHI EA '16}
}

