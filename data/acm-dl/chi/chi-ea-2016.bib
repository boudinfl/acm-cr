@inproceedings{10.1145/2851581.2890384,
author = {Jayaratne, Keisha},
title = {The Memory Tree: Using Sound to Support Reminiscence},
year = {2016},
isbn = {9781450340823},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2851581.2890384},
