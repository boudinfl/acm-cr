title = {Exploring Interactions with a Flexible Tactile Device for Multi-Context Interaction},
year = {2016},
isbn = {9781450340823},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2851581.2892458},
