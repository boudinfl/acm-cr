@inproceedings{10.1145/2851581.2890375,
author = {Ryan, James Owen and Summerville, Adam J. and Samuel, Ben},
title = {Bad News: A Game of Death and Communication},
year = {2016},
isbn = {9781450340823},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2851581.2890375},
doi = {10.1145/2851581.2890375},
