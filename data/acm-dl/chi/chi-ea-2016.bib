@inproceedings{10.1145/2851581.2856472,
author = {Vertanen, Keith and Dunlop, Mark and Clawson, James and Kristensson, Per Ola and Arif, Ahmed Sabbir},
title = {Inviscid Text Entry and Beyond},
year = {2016},
isbn = {9781450340823},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2851581.2856472},
doi = {10.1145/2851581.2856472},
abstract = {The primary focus of our workshop is on exploring ways to enable inviscid text entry on mobile devices. In inviscid text entry, it is the user's creativity that is the text-creation bottleneck rather than the text entry interface. The inviscid rate is estimated at 67 wpm while current mobile text entry methods are typically 20-40 wpm. In this workshop, participants will discuss and demonstrate early work into novel methods that allow very rapid text entry, even if such methods currently are quite error-prone. In addition to submitting a position paper, participants are strongly encouraged to bring a demo to present during the workshop's interactive Show-and-Tell session. As well as exploring new entry methods, the workshop will discuss experimental tasks and evaluation methodologies for researching inviscid text entry. Looking beyond the speed of entry, the workshop will explore often overlooked aspects of text entry such as user adaptation, post-entry correction/revision/formatting, entry of diverse types of text, and entry when a user's input or output capabilities are limited. Finally, the workshop serves to strengthen the community of text entry researchers who attend CHI, as well as provide an opportunity for new members to join this community.},
booktitle = {Proceedings of the 2016 CHI Conference Extended Abstracts on Human Factors in Computing Systems},
pages = {3469–3476},
numpages = {8},
keywords = {text input, text entry, mobile interaction},
location = {San Jose, California, USA},
series = {CHI EA '16}
}

