@inproceedings{10.1145/2851581.2856509,
author = {Mamykina, Lena and Reddy, Madhu and Siek, Katie and Marcu, Gabriela and Liu, Leslie},
title = {Workshop on Interactive Systems in Healthcare (WISH)},
year = {2016},
isbn = {9781450340823},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2851581.2856509},
