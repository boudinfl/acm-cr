@inproceedings{10.1145/2851581.2890380,
author = {Fujiwara, Kazuki},
title = {Error Correction of Speech Recognition by Custom Phonetic Alphabet Input for Ultra-Small Devices},
year = {2016},
isbn = {9781450340823},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2851581.2890380},
doi = {10.1145/2851581.2890380},
abstract = {Automatic speech recognition (ASR) is one of the most effective ways to input text, in particular, for ultra-small devices such as smartwatches. Although the accuracy of ASR has been improving these days, it still often makes recognition errors. If you want to correct words that have been recognized incorrectly, you need to use a software keyboard or read out the words again. However, it is difficult and annoying to input text correctly using a software keyboard on a small display. Besides, even if you read out the same phrase again, there is no guarantee that your speech will be recognized correctly. To address this problem, we designed a custom phonetic alphabet optimal for ASR. It enables the user to input words more accurately than spelling them out directly or using the NATO phonetic alphabet, which is known as the standardized phonetic alphabet used for human-human speech interaction under noise. Furthermore, we conducted user studies to verify our method's efficiency in correcting speech recognition errors on a small display.},
booktitle = {Proceedings of the 2016 CHI Conference Extended Abstracts on Human Factors in Computing Systems},
pages = {104–109},
numpages = {6},
keywords = {smartwatch, speech recognition, phonetic alphabet},
location = {San Jose, California, USA},
series = {CHI EA '16}
}

@inproceedings{10.1145/2851581.2890381,
author = {Hall, Brian D.},
