booktitle = {Proceedings of the 2016 CHI Conference Extended Abstracts on Human Factors in Computing Systems},
pages = {1288–1294},
numpages = {7},
keywords = {organizational factors, secure software engineering, qualitative study, penetration testing, development practices},
