@inproceedings{10.1145/2851581.2892499,
author = {Ng, Joy and Kong, Haixun},
title = {Not All Who Wander Are Lost: Smart Tracker for People with Dementia},
year = {2016},
isbn = {9781450340823},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2851581.2892499},
doi = {10.1145/2851581.2892499},
