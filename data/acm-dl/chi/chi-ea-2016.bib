booktitle = {Proceedings of the 2016 CHI Conference Extended Abstracts on Human Factors in Computing Systems},
pages = {2241–2248},
numpages = {8},
keywords = {artificial intelligence, wandering, human-centered multimedia computing, dementia, assistive technology},
