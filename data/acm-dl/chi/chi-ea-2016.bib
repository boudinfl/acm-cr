booktitle = {Proceedings of the 2016 CHI Conference Extended Abstracts on Human Factors in Computing Systems},
pages = {160–163},
numpages = {4},
keywords = {live performance, emergent narrative, wizard-of-oz techniques, death in video games, deep simulation, mixed reality},
location = {San Jose, California, USA},
