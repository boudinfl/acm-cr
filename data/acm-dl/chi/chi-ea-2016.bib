series = {CHI EA '16}
}

@inproceedings{10.1145/2851581.2892344,
author = {Lee, Jihyun and Kim, Byungmoon and Suh, Bongwon and Koh, Eunyee},
title = {Exploring the Front Touch Interface for Virtual Reality Headsets},
year = {2016},
isbn = {9781450340823},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2851581.2892344},
