author = {Cowan, Benjamin R. and Gannon, Derek and Walsh, Jenny and Kinneen, Justin and O'Keefe, Eanna and Xie, Linxin},
title = {Towards Understanding How Speech Output Affects Navigation System Credibility},
year = {2016},
isbn = {9781450340823},
publisher = {Association for Computing Machinery},
