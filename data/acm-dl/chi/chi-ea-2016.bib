booktitle = {Proceedings of the 2016 CHI Conference Extended Abstracts on Human Factors in Computing Systems},
pages = {3006–3012},
numpages = {7},
keywords = {pen and paper, comparative study, freeform interaction, pen based interaction, sketching, knowledge maps},
location = {San Jose, California, USA},
series = {CHI EA '16}
