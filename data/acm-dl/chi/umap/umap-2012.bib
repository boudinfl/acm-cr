title = {Towards Adaptive Information Visualization: On the Influence of User Characteristics},
year = {2012},
isbn = {9783642314537},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-642-31454-4_23},
