@inproceedings{10.1145/3290605.3300513,
author = {Lin, Richard and Ramesh, Rohit and Iannopollo, Antonio and Sangiovanni Vincentelli, Alberto and Dutta, Prabal and Alon, Elad and Hartmann, Bj\"{o}rn},
