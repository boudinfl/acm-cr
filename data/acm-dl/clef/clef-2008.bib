pages = {719–723},
numpages = {5},
keywords = {information retrieval, topic expansion, medical domain-specific vocabulary, linguistic engineering, 2008, CLEF, image retrieval, imageCLEF medical retrieval task, imageCLEF, relevance feedback, indexing, thesaurus},
location = {Aarhus, Denmark},
