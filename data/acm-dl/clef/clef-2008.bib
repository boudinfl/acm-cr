@inproceedings{10.5555/1813809.1813915,
author = {Lana-Serrano, Sara and Villena-Rom\'{a}n, Julio and Gonz\'{a}lez-Crist\'{o}bal, Jos\'{e} Carlos},
title = {MIRACLE at ImageCLEFmed 2008: Semantic vs. Statistical Strategies for Topic Expansion},
year = {2008},
isbn = {3642044468},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
