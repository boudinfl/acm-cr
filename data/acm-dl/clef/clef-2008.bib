@inproceedings{10.5555/1813809.1813866,
author = {Gl\"{o}ckner, Ingo and Pelzer, Bj\"{o}rn},
title = {Combining Logic and Machine Learning for Answering Questions},
year = {2008},
isbn = {3642044468},
