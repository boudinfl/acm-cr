@inproceedings{10.5555/1813809.1813929,
author = {Overwijk, Arnold and Nguyen, Dong and Hauff, Claudia and Trieschnigg, Dolf and Hiemstra, Djoerd and De Jong, Franciska},
title = {On the Evaluation of Snippet Selection for WebCLEF},
year = {2008},
isbn = {3642044468},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
abstract = {WebCLEF is about supporting a user who is an expert in writing a survey article on a specific topic with a clear goal and audience by generating a ranked list with relevant snippets. This paper focuses on the evaluation methodology of WebCLEF. We show that the evaluation method and test set used for WebCLEF 2007 cannot be used to evaluate new systems and give recommendations how to improve the evaluation.},
booktitle = {Proceedings of the 9th Cross-Language Evaluation Forum Conference on Evaluating Systems for Multilingual and Multimodal Information Access},
pages = {794–797},
numpages = {4},
keywords = {measurement, experimentation, performance},
