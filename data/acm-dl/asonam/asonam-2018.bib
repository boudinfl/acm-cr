@inproceedings{10.5555/3382225.3382383,
author = {Sohn, Eunsoo and Noh, Kyung-Ran and Lee, Bangrae and Kwon, Oh-Jin},
title = {Bibliometric Network Analysis and Visualization of Research and Development Trends in Precision Medicine},
