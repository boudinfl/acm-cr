@inproceedings{10.5555/3382225.3382391,
author = {Olivares, Gast\'{o}n and C\'{a}rdenas, Juan Pablo and Losada, Juan Carlos and Benito, Rosa Mar\'{\i}a},
title = {Scientific Knowledge Construction: A Proposal of a Prognostic Model Based on Disciplinary Complement Networks},
