@inproceedings{10.1145/2492517.2492577,
author = {Janssens, Olivier and Slembrouck, Maarten and Verstockt, Steven and Van Hoecke, Sofie and Van de Walle, Rik},
title = {Real-Time Emotion Classification of Tweets},
year = {2013},
isbn = {9781450322409},
