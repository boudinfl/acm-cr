}

@inproceedings{10.5555/3192424.3192543,
author = {Joaristi, Mikel and Serra, Edoardo and Spezzano, Francesca},
title = {Evaluating the Impact of Social Media in Detecting Health-Violating Restaurants},
year = {2016},
isbn = {9781509028467},
publisher = {IEEE Press},
abstract = {Nowadays, detecting health-violating restaurants is a serious problem due to the limited number of health inspectors in a city as compared to the number of restaurants. Rarely inspectors are helped by formal complains, but many complaints are reported as reviews on social media such as Yelp.In this paper we propose new predictors to detect health-violating restaurants based on restaurant sub-area location, previous inspections history, Yelp reviews content, and Yelp users behavior. The resulting method outperforms past work, with a percentage of improvement in Cohen's kappa and Matthews correlation coefficient of at least 16%. In addition, we define a new method that directly evaluates the benefit of a classifier on the ability of an inspector in detecting health-violating restaurants. We show that our classification method really improves the ability of the inspector and outperforms previous solutions.},
booktitle = {Proceedings of the 2016 IEEE/ACM International Conference on Advances in Social Networks Analysis and Mining},
pages = {626–633},
numpages = {8},
location = {Davis, California},
series = {ASONAM '16}
}

@inproceedings{10.5555/3192424.3192544,
author = {Martin-Gutierrez, S. and Borondo, J. and Morales, A. J. and Losada, J. C. and Tarquis, A. M. and Benito, R. M.},
title = {Agricultural Activity Shapes the Mobility Patterns in Senegal},
year = {2016},
isbn = {9781509028467},
publisher = {IEEE Press},
abstract = {The communication and migration patterns of a country are shaped by its socioeconomic processes. The economy of Senegal is predominantly rural, as agriculture employs over 70% of the labor force. In this work, we have used mobile phone records to explore the impact of agricultural activity on the mobility patterns of the inhabitants of Senegal. We have detected an increase in the migration flows throughout the country during the harvest season. At the same time, religious holidays also shape the mobility patterns of the Senegalese people, since, as in many cultures, they are related to climate seasons and agricultural activities. Hence, in the light of our results, agricultural activity and religious holidays are the primary drivers of mobility inside the country.},
booktitle = {Proceedings of the 2016 IEEE/ACM International Conference on Advances in Social Networks Analysis and Mining},
pages = {634–641},
numpages = {8},
location = {Davis, California},
series = {ASONAM '16}
}

@inproceedings{10.5555/3192424.3192546,
author = {Sela, Alon and Goldenberg, Dmitri and Shmueli, Erez and Ben-Gal, Irad},
title = {Scheduled Seeding for Latent Viral Marketing},
year = {2016},
isbn = {9781509028467},
publisher = {IEEE Press},
abstract = {One highly studied topic in the field of social networks is the search for influential nodes, that when seeded (i.e. infected intentionally), may infect a large portion of the network through a viral process. However, when it comes to the spread of new products, such viral processes are rather rare. Social influence is indeed an important factor when it comes to the act of adopting a new product. However, this influence is usually latent and does not trigger the purchase action by itself, it therefore requires an additional sales effort. We propose a model and a method that better fit the product adoption scenario. Our method allocates the seeding efforts not only to precise nodes but also at precise points in time, such that the product adoption rate increases. By conducting a set of empirical simulations, we show that under realistic assumptions, our method improves the product adoption rate by 25%--50%.},
booktitle = {Proceedings of the 2016 IEEE/ACM International Conference on Advances in Social Networks Analysis and Mining},
pages = {642–643},
numpages = {2},
keywords = {social networks, scheduled seeding, information spread, viral marketing, information cascades},
location = {Davis, California},
series = {ASONAM '16}
}

@inproceedings{10.5555/3192424.3192547,
author = {Kastrin, Andrej and Rindflesch, Thomas C. and Hristovski, Dimitar},
title = {Evolution of MEDLINE Bibliographic Database: Preliminary Results},
year = {2016},
isbn = {9781509028467},
publisher = {IEEE Press},
abstract = {In this preliminary work we propose an approach to tracking network communities in time. We describe a methodology to study the dynamics and evolution of the MEDLINE bibliographic database using network-based analysis. We explore how the temporal characteristics of the network can be used to provide insight into the historical evolution of the broad field of biomedicine.},
booktitle = {Proceedings of the 2016 IEEE/ACM International Conference on Advances in Social Networks Analysis and Mining},
pages = {644–646},
numpages = {3},
keywords = {MEDLINE, network analysis, community evolution, network evolution},
