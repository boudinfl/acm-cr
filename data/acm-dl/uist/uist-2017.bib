pages = {255–265},
numpages = {11},
keywords = {360 video, off-screen targets, telepresence, picture-in-picture},
location = {Qu\'{e}bec City, QC, Canada},
series = {UIST '17}
}

@inproceedings{10.1145/3126594.3126659,
author = {Nguyen, Cuong and DiVerdi, Stephen and Hertzmann, Aaron and Liu, Feng},
