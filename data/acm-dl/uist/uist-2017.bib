@inproceedings{10.1145/3126594.3126604,
author = {McIntosh, Jess and Marzo, Asier and Fraser, Mike},
title = {SensIR: Detecting Hand Gestures with a Wearable Bracelet Using Infrared Transmission and Reflection},
year = {2017},
