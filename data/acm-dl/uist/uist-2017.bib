@inproceedings{10.1145/3126594.3126655,
author = {Mok, Brian and Johns, Mishel and Yang, Stephen and Ju, Wendy},
title = {Reinventing the Wheel: Transforming Steering Wheel Systems for Autonomous Vehicles},
