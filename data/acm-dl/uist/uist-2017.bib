@inproceedings{10.1145/3126594.3126643,
author = {Leen, Danny and Ramakers, Raf and Luyten, Kris},
title = {StrutModeling: A Low-Fidelity Construction Kit to Iteratively Model, Test, and Adapt 3D Objects},
year = {2017},
isbn = {9781450349819},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3126594.3126643},
