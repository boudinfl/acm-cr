@inproceedings{10.1145/1228175.1228259,
author = {Hampshire, Alastair and Seichter, Hartmut and Grasset, Rapha\"{e}l and Billinghurst, Mark},
title = {Augmented Reality Authoring: Generic Context from Programmer to Designer},
year = {2006},
isbn = {1595935452},
publisher = {Association for Computing Machinery},
