@inproceedings{10.1145/1228175.1228264,
author = {H\o{}egh, Rune Thaarup},
title = {Usability Problems: Do Software Developers Already Know?},
year = {2006},
isbn = {1595935452},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1228175.1228264},
