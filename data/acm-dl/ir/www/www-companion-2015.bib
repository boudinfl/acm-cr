@inproceedings{10.1145/2740908.2743007,
author = {R\'{o}zsa, Gy\"{o}ngyi and Komlodi, Anita and Chu, Peng},
title = {Online Searching in English as a Foreign Language},
year = {2015},
isbn = {9781450334730},
