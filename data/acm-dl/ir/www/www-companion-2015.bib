@inproceedings{10.1145/2740908.2741728,
author = {Hodas, Nathan O. and Ver Steeg, Greg and Harrison, Joshua and Chikkagoudar, Satish and Bell, Eric and Corley, Courtney D.},
title = {Disentangling the Lexicons of Disaster Response in Twitter},
year = {2015},
isbn = {9781450334730},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2740908.2741728},
