@inproceedings{10.1145/2740908.2742833,
author = {Scheuner, Joel and Cito, J\"{u}rgen and Leitner, Philipp and Gall, Harald},
title = {Cloud WorkBench: Benchmarking IaaS Providers Based on Infrastructure-as-Code},
year = {2015},
isbn = {9781450334730},
