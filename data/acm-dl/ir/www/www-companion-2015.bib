@inproceedings{10.1145/2740908.2742840,
author = {Nunes, Bernardo Pereira and Nurmikko-Fuller, Terhi and Lopes, Giseli Rabello and Renso, Chiara},
title = {A Serious Game Powered by Semantic Web Technologies},
year = {2015},
