@inproceedings{10.1145/2567948.2576941,
author = {Chen, Jiaoyan and Chen, Huajun and Zheng, Guozhou and Pan, Jeff Z. and Wu, Honghan and Zhang, Ningyu},
title = {Big Smog Meets Web Science: Smog Disaster Analysis Based on Social Media and Device Data on the Web},
year = {2014},
