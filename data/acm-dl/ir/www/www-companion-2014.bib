pages = {529–534},
numpages = {6},
keywords = {youtube, social media, digital media, user generated content, video streaming service, popularity analysis},
location = {Seoul, Korea},
series = {WWW '14 Companion}
}

@inproceedings{10.1145/2567948.2576946,
