@inproceedings{10.1145/2567948.2576956,
author = {Kwak, Haewoon and Lee, Jong Gun},
title = {Has Much Potential but Biased: Exploring the Scholarly Landscape in Twitter},
year = {2014},
isbn = {9781450327459},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2567948.2576956},
