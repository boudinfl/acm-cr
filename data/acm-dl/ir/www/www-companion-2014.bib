author = {Lee, Chungmok and Pham, Minh and Kim, Norman and Jeong, Myong K. and Lin, Dennis K.J. and Chavalitwongse, Wanpracha Art},
title = {A Novel Link Prediction Approach for Scale-Free Networks},
year = {2014},
