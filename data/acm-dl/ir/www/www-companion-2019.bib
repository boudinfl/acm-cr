@inproceedings{10.1145/3308560.3317057,
author = {Shah, Daksh and Kumaran, Aravinda and Sen, Rijurekha and Kumaraguru, Ponnurangam},
title = {Travel Time Estimation Accuracy in Developing Regions: An Empirical Case Study with Uber Data in Delhi-NCR✱},
year = {2019},
isbn = {9781450366755},
