@inproceedings{10.1145/3308560.3315001,
author = {Alonso, Omar},
title = {Large Scale Human Sensing Over Time. Challenges and Lessons Learned},
year = {2019},
isbn = {9781450366755},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3308560.3315001},
