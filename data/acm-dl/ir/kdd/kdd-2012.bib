@inproceedings{10.1145/2339530.2339619,
author = {Xing, Xinyu and Liang, Yu-li and Huang, Sui and Cheng, Hanqiang and Han, Richard and Lv, Qin and Liu, Xue and Mishra, Shivakant and Zhu, Yi},
title = {Scalable Misbehavior Detection in Online Video Chat Services},
year = {2012},
