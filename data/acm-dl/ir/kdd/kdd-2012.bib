@inproceedings{10.1145/2339530.2339559,
author = {Matsushima, Shin and Vishwanathan, S.V.N. and Smola, Alexander J.},
title = {Linear Support Vector Machines via Dual Cached Loops},
year = {2012},
isbn = {9781450314626},
publisher = {Association for Computing Machinery},
