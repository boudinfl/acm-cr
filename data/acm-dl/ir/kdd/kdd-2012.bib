@inproceedings{10.1145/2339530.2339668,
author = {Duivesteijn, Wouter and Feelders, Ad and Knobbe, Arno},
title = {Different Slopes for Different Folks: Mining for Exceptional Regression Models with Cook's Distance},
year = {2012},
