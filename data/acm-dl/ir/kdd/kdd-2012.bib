@inproceedings{10.1145/2339530.2339679,
author = {Yang, De-Nian and Shen, Chih-Ya and Lee, Wang-Chien and Chen, Ming-Syan},
title = {On Socio-Spatial Group Query for Location-Based Social Networks},
