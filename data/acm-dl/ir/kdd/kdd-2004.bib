}

@inproceedings{10.1145/1014052.1014107,
author = {YOSHIDA, Kenichi and ADACHI, Fuminori and WASHIO, Takashi and MOTODA, Hiroshi and HOMMA, Teruaki and NAKASHIMA, Akihiro and FUJIKAWA, Hiromitsu and YAMAZAKI, Katsuyuki},
