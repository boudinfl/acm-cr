}

@inproceedings{10.1145/1014052.1014126,
author = {Kantarcioundefinedlu, Murat and Jin, Jiashun and Clifton, Chris},
title = {When Do Data Mining Results Violate Privacy?},
year = {2004},
isbn = {1581138881},
publisher = {Association for Computing Machinery},
