@inproceedings{10.1145/3289600.3291039,
author = {Xiao, Rong and Ji, Jianhui and Cui, Baoliang and Tang, Haihong and Ou, Wenwu and Xiao, Yanghua and Tan, Jiwei and Ju, Xuan},
title = {Weakly Supervised Co-Training of Query Rewriting AndSemantic Matching for e-Commerce},
year = {2019},
