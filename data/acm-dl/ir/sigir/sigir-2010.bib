}

@inproceedings{10.1145/1835449.1835476,
author = {Bagherjeiran, Abraham and Hatch, Andrew O. and Ratnaparkhi, Adwait},
title = {Ranking for the Conversion Funnel},
year = {2010},
isbn = {9781450301534},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1835449.1835476},
doi = {10.1145/1835449.1835476},
abstract = {In contextual advertising advertisers show ads to users so that they will click on them and eventually purchase a product. Optimizing this action sequence, called the conversion funnel, is the ultimate goal of advertising. Advertisers, however, often have very different sub-goals for their ads such as purchase, request for a quote, or simply a site visit. Often an improvement for one advertiser's goal comes at the expense of others. A single ranking function must balance these different goals in order to make an efficient system for all advertisers. We propose a ranking method that globally balances the goals of all advertisers, while simultaneously improving overall performance. Our method has been shown to improve significantly over the baseline in online traffic at a major ad network.},
booktitle = {Proceedings of the 33rd International ACM SIGIR Conference on Research and Development in Information Retrieval},
pages = {146–153},
numpages = {8},
keywords = {ranking, online advertising},
location = {Geneva, Switzerland},
