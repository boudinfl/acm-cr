year = {2019},
isbn = {9781450369886},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3358695.3360936},
doi = {10.1145/3358695.3360936},
abstract = {In this work we present a novel recommendation methodology together with new complex network based proximity and novelty metrics. We base our approach on a neighborhood based collaborative filtering combined with the analysis of a small-world item-item network. Our approach uses implicit feedback from categorizations of content provided by users or content creators, instead of focusing on rating. However we build a ranking heuristic that mixes our proximity and novelty measures, in order to improve upon the recommendations made by a standard k-NN based collaborative filtering approach. We focus on the use case of gaming based platforms like Twitch.tv, where the content is classified by semi-free categories by the users. We also apply our methodology to the MovieLens dataset to try to predict the ratings of the users and provide a degree of comparability. We evaluate our results using a modified accuracy metric and also the normalized discounted cumulative gain when comparing with user ratings. We show that this heuristic more closely maps to the natural search behavior of users in content platforms than the classic neighborhood methods, and show how it can be used to improve recommendation, ad targeting, and content production.},
booktitle = {IEEE/WIC/ACM International Conference on Web Intelligence - Companion Volume},
pages = {119–126},
numpages = {8},
keywords = {Novelty Metrics, Community Detection, Collaborative Filtering, Complex Networks, Recommendation},
location = {Thessaloniki, Greece},
series = {WI '19 Companion}
}

@inproceedings{10.1145/3358695.3360890,
author = {Quan, Weize and Wang, Kai and Yan, Dong-Ming and Pellerin, Denis and Zhang, Xiaopeng},
title = {Impact of Data Preparation and CNN’s First Layer on Performance of Image Forensics: A Case Study of Detecting Colorized Images},
year = {2019},
isbn = {9781450369886},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3358695.3360890},
doi = {10.1145/3358695.3360890},
abstract = {In the field of image forensics, many convolutional neural network (CNN)-based forensic methods have been proposed and generally achieved the state-of-the-art performance. However, some questions are worth studying and answering regarding the trustworthiness of such methods, including for example the appropriateness of the discriminative information automatically extracted by CNN and the generalization performance on “unseen” data during the testing phase. In this paper, we study these questions in the case of a specific forensic problem of distinguishing between natural images (NIs) and colorized images (CIs). Through a series of experiments, we analyze the impact of data preparation and setting of the first layer of a recent state-of-the-art CNN-based method on the detector’s forensic performance, in particular the generalization capability. We obtain some interesting observations which can serve as useful hints for carrying out image forensics experiments. Moreover, we propose a very simple method to improve the generalization performance of colorized image detection by combining decision results from CNN models with different settings at the network’s first layer.},
booktitle = {IEEE/WIC/ACM International Conference on Web Intelligence - Companion Volume},
