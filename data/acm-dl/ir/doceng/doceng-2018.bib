booktitle = {Proceedings of the ACM Symposium on Document Engineering 2018},
articleno = {39},
numpages = {4},
keywords = {Clustering, Record Linkage, Entity Resolution},
location = {Halifax, NS, Canada},
series = {DocEng '18}
