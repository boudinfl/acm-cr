}

@inproceedings{10.1145/1645953.1646186,
author = {Fern\'{a}ndez, Ronald T. and Losada, David E.},
title = {Using Opinion-Based Features to Boost Sentence Retrieval},
year = {2009},
isbn = {9781605585123},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
