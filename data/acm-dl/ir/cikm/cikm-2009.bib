title = {Exploring Multimedia Databases via Optimization-Based Relevance Feedback and the Earth Mover's Distance},
year = {2009},
isbn = {9781605585123},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1645953.1646187},
