@inproceedings{10.1145/1645953.1646131,
author = {Zhong, Ming and Liu, Mengchi},
title = {3se: A Semi-Structured Search Engine for Heterogeneous Data in Graph Model},
year = {2009},
isbn = {9781605585123},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1645953.1646131},
