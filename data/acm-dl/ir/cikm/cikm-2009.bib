@inproceedings{10.1145/1645953.1646222,
author = {Cerf, Lo\"{\i}c and Mougel, Pierre-Nicolas and Boulicaut, Jean-Fran\c{c}ois},
title = {Agglomerating Local Patterns Hierarchically with ALPHA},
year = {2009},
isbn = {9781605585123},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1645953.1646222},
doi = {10.1145/1645953.1646222},
