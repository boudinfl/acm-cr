@inproceedings{10.1145/1645953.1646189,
author = {Liao, Wenhui and Moulinier, Isabelle},
title = {Feature Engineering on Event-Centric Surrogate Documents to Improve Search Results},
year = {2009},
isbn = {9781605585123},
