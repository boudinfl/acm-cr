booktitle = {Proceedings of the 18th ACM Conference on Information and Knowledge Management},
pages = {2117–2118},
numpages = {2},
keywords = {privacy preserving data mining for large data sets, efficient statistical disclosure control, efficient privacy-enhancing technologies},
