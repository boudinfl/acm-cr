}

@inproceedings{10.1145/1645953.1646220,
author = {Dai, Na and Davison, Brian D.},
title = {Vetting the Links of the Web},
year = {2009},
isbn = {9781605585123},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1645953.1646220},
doi = {10.1145/1645953.1646220},
abstract = {Many web links mislead human surfers and automated crawlers because they point to changed content, out-of-date information, or invalid URLs. It is a particular problem for large, well-known directories such as the dmoz Open Directory Project, which maintains links to representative and authoritative external web pages within their various topics. Therefore, such sites involve many editors to manually revisit and revise links that have become out-of-date. To remedy this situation, we propose the novel web mining task of identifying outdated links on the web. We build a general classification model, primarily using local and global temporal features extracted from historical content, topic, link and time-focused changes over time. We evaluate our system via five-fold cross-validation on more than fifteen thousand ODP external links selected from thirteen top-level categories. Our system can predict the actions of ODP editors more than 75% of the time. Our models and predictions could be useful for various applications that depend on analysis of web links, including ranking and crawling.},
booktitle = {Proceedings of the 18th ACM Conference on Information and Knowledge Management},
pages = {1745–1748},
numpages = {4},
keywords = {web archives, link analysis, web decay, odp},
location = {Hong Kong, China},
series = {CIKM '09}
}

