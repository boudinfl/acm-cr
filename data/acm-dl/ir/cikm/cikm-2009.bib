@inproceedings{10.1145/1645953.1646191,
author = {Hung, Chih-Chieh and Peng, Wen-Chih},
title = {Clustering Object Moving Patterns for Prediction-Based Object Tracking Sensor Networks},
year = {2009},
isbn = {9781605585123},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1645953.1646191},
doi = {10.1145/1645953.1646191},
abstract = {Prior works have shown that probabilistic suffix trees (PST) could predict accurately the moving behaviors of objects for prediction-based object tracking sensor networks. However, maintaining PSTs for objects incurs a considerable amount of storage spaces for resource-constrained sensor nodes. In this paper, we derive a distance function between two PSTs and propose an algorithm to determine the similarity between them. By the distance between PSTs, we propose a clustering algorithm to partition objects with similar moving behaviors into groups. Furthermore, for each group, one PST is selected to predict movements of objects within one group. Experimental results show that our proposed approaches not only effectively reduce the storage cost but also provide good prediction accuracy.},
booktitle = {Proceedings of the 18th ACM Conference on Information and Knowledge Management},
pages = {1633–1636},
numpages = {4},
keywords = {clustering, group mobility, object tracking},
