@inproceedings{10.1145/2396761.2398735,
author = {Zerr, Sergej and Siersdorfer, Stefan and Hare, Jonathon},
title = {PicAlert! A System for Privacy-Aware Image Classification and Retrieval},
year = {2012},
isbn = {9781450311564},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2396761.2398735},
