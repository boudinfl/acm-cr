@inproceedings{10.1145/2396761.2398636,
author = {Ha, Jiwoon and Kwon, Soon-Hyoung and Kim, Sang-Wook and Faloutsos, Christos and Park, Sunju},
title = {Top-N Recommendation through Belief Propagation},
year = {2012},
isbn = {9781450311564},
publisher = {Association for Computing Machinery},
