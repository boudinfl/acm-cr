}

@inproceedings{10.1145/2396761.2398679,
author = {Xu, Shize and Kong, Liang and Zhang, Yan},
title = {A Picture Paints a Thousand Words: A Method of Generating Image-Text Timelines},
year = {2012},
isbn = {9781450311564},
