}

@inproceedings{10.1145/2396761.2398640,
author = {Yeo, Jinyoung and Park, Jin-woo and Hwang, Seung-won},
title = {Finding Influential Products on Social Domination Game},
year = {2012},
isbn = {9781450311564},
publisher = {Association for Computing Machinery},
