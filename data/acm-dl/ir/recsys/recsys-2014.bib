@inproceedings{10.1145/2645710.2645729,
author = {Bastian, Mathieu and Hayes, Matthew and Vaughan, William and Shah, Sam and Skomoroch, Peter and Kim, Hyungjin and Uryasev, Sal and Lloyd, Christopher},
