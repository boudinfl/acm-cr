@inproceedings{10.1145/2645710.2645763,
author = {Zhang, Kunpeng and Ouksel, Aris M. and Fan, Shaokun and Liu, Hengchang},
title = {Scalable Audience Targeted Models for Brand Advertising on Social Networks},
year = {2014},
isbn = {9781450326681},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2645710.2645763},
