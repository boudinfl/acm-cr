@inproceedings{10.1145/2365952.2366016,
author = {Liu, Qiwen and Chen, Tianjian and Cai, Jing and Yu, Dianhai},
title = {Enlister: Baidu's Recommender System for the Biggest Chinese Q&amp;A Website},
year = {2012},
isbn = {9781450312707},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2365952.2366016},
doi = {10.1145/2365952.2366016},
