@inproceedings{10.1145/3240323.3240365,
author = {Lu, Yichao and Dong, Ruihai and Smyth, Barry},
title = {Why I like It: Multi-Task Learning for Recommendation and Explanation},
year = {2018},
isbn = {9781450359016},
