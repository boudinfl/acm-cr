author = {Zhou, Qinghai and Li, Liangyue and Cao, Nan and Buchler, Norbou and Tong, Hanghang},
title = {E<span class="smallcaps SmallerCapital">xtra</span>: Explaining Team Recommendation in Networks},
year = {2018},
isbn = {9781450359016},
