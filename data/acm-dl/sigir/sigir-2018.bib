@inproceedings{10.1145/3209978.3209997,
author = {Chen, Zheqian and Yang, Rongqin and Zhao, Zhou and Cai, Deng and He, Xiaofei},
title = {Dialogue Act Recognition via CRF-Attentive Structured Network},
year = {2018},
