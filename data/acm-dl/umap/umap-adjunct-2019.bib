@inproceedings{10.1145/3314183.3323677,
author = {Trujillo, Amaury and Buzzi, Maria Claudia},
title = {Classification of Cardiometabolic Risk in Early Middle-Aged Women for Preventive Self-Care Apps},
year = {2019},
isbn = {9781450367110},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3314183.3323677},
doi = {10.1145/3314183.3323677},
abstract = {Menopause is a natural part of women's aging, but is often accompanied by an increased cardiometabolic risk (CMR), of which most women are unaware. Preventive self-care via mobile health applications (apps) is a promising way to address this issue, but research on apps for middle-aged women is limited. Further, modeling such risk is no trivial task in a non-clinical self-care context, where most biomarkers used in traditional models are unavailable. Machine learning (ML) is a potential option in this regard, but many ML approaches are effectively black box models, which leads to doubt regarding their trustworthiness. Therefore, in this paper we analyze and compare different decision tree and rule-based classification models, considered to be inherently interpretable, to assess the CMR of early middle-aged women in the context of a non-clinical self-care app. For this, we first defined a set of candidate determinants based on the feedback of potential users and domain experts. We then used data from a subset of the participants in the Study of Women's Health Across the Nation (SWAN) to compare these ML models with traditional risk score models, based on five cardiometabolic 10-year outcomes: heart attack, stroke, angina pectoris, diabetes, and metabolic syndrome.},
booktitle = {Adjunct Publication of the 27th Conference on User Modeling, Adaptation and Personalization},
pages = {349–354},
numpages = {6},
keywords = {women's health, self-care, cardiometabolic risk, m-health},
location = {Larnaca, Cyprus},
series = {UMAP'19 Adjunct}
}

