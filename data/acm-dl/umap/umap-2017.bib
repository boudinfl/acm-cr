title = {Encoding User as More Than the Sum of Their Parts: Recurrent Neural Networks and Word Embedding for People-to-People Recommendation},
year = {2017},
isbn = {9781450346351},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
