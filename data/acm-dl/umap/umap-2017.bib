}

@inproceedings{10.1145/3079628.3079643,
author = {Barile, Francesco and Masthoff, Judith and Rossi, Silvia},
title = {The Adaptation of an Individual's Satisfaction to Group Context: The Role of Ties Strength and Conflicts},
year = {2017},
isbn = {9781450346351},
