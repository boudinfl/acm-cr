@inproceedings{10.1145/3079628.3079650,
author = {Perna, Diego and Tagarelli, Andrea},
title = {An Evaluation of Learning-to-Rank Methods for Lurking Behavior Analysis},
year = {2017},
isbn = {9781450346351},
publisher = {Association for Computing Machinery},
