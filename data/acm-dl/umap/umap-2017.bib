@inproceedings{10.1145/3079628.3079697,
author = {Martinez-Maldonado, Roberto and Pechenizkiy, Mykola and Buckingham Shum, Simon and Power, Tamara and Hayes, Carolyn and Axisa, Carmen},
title = {Modelling Embodied Mobility Teamwork Strategies in a Simulation-Based Healthcare Classroom},
year = {2017},
isbn = {9781450346351},
publisher = {Association for Computing Machinery},
