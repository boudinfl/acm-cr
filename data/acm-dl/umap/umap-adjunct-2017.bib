}

@inproceedings{10.1145/3099023.3099090,
author = {Raptis, George E. and Fidas, Christos and Avouris, Nikolaos},
title = {Cultural Heritage Gaming: Effects of Human Cognitive Styles on Players' Performance and Visual Behavior},
year = {2017},
isbn = {9781450350679},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
