booktitle = {Extended Abstracts of the 2019 CHI Conference on Human Factors in Computing Systems},
pages = {1–6},
numpages = {6},
keywords = {attributes similarity, music recommendation, taste model, temporal proximity, recommender systems, proximity filtering},
