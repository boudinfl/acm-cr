@inproceedings{10.1145/3290607.3312904,
author = {Xu, Tao and Zhou, Yun and Wang, Yuhan and Zhao, Zichen and Li, Shiqian},
title = {Guess or Not? A Brain-Computer Interface Using EEG Signals for Revealing the Secret behind Scores},
