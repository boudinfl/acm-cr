@inproceedings{10.1145/3290607.3299065,
author = {Saha, Koustuv and Bayraktaroglu, Ayse E. and Campbell, Andrew T. and Chawla, Nitesh V. and De Choudhury, Munmun and D'Mello, Sidney K. and Dey, Anind K. and Gao, Ge and Gregg, Julie M. and Jagannath, Krithika and Mark, Gloria and Martinez, Gonzalo J. and Mattingly, Stephen M. and Moskal, Edward and Sirigiri, Anusha and Striegel, Aaron and Yoo, Dong Whi},
