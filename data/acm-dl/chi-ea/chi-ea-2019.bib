@inproceedings{10.1145/3290607.3299041,
author = {Mattingly, Stephen M. and Gregg, Julie M. and Audia, Pino and Bayraktaroglu, Ayse Elvan and Campbell, Andrew T. and Chawla, Nitesh V. and Das Swain, Vedant and De Choudhury, Munmun and D'Mello, Sidney K. and Dey, Anind K. and Gao, Ge and Jagannath, Krithika and Jiang, Kaifeng and Lin, Suwen and Liu, Qiang and Mark, Gloria and Martinez, Gonzalo J. and Masaba, Kizito and Mirjafari, Shayan and Moskal, Edward and Mulukutla, Raghu and Nies, Kari and Reddy, Manikanta D. and Robles-Granda, Pablo and Saha, Koustuv and Sirigiri, Anusha and Striegel, Aaron},
