@inproceedings{10.1145/3290607.3312924,
author = {Seng\"{u}n, Sercan and Salminen, Joni and Jung, Soon-gyo and Mawhorter, Peter and Jansen, Bernard J.},
title = {Analyzing Hate Speech Toward Players from the MENA in League of Legends},
