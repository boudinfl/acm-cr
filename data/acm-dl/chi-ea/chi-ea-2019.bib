pages = {1–6},
numpages = {6},
keywords = {perceived intelligence, likability, user perception, conversational agent, conversational fillers, human-likeness, voice user interface},
location = {Glasgow, Scotland Uk},
series = {CHI EA '19}
}

@inproceedings{10.1145/3290607.3313065,
author = {Katner, Katarzyna and Jianu, Radu},
