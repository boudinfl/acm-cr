author = {Palacin, Victoria and Ginnane, S\'{\i}le and Ferrario, Maria Angela and Happonen, Ari and Wolff, Annika and Piutunen, Sara and Kupiainen, Niina},
title = {SENSEI: Harnessing Community Wisdom for Local Environmental Monitoring in Finland},
year = {2019},
