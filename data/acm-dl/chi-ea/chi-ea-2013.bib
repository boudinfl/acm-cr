@inproceedings{10.1145/2468356.2468372,
author = {Probst, Kathrin and Lindlbauer, David and Greindl, Patrick and Trapp, Markus and Haller, Michael and Schwartz, Bernhard and Schrempf, Andreas},
title = {Rotating, Tilting, Bouncing: Using an Interactive Chair to Promote Activity in Office Environments},
