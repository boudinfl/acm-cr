abstract = {Older computer users often exhibit poorer performance in point and click tasks on a computer than younger adults. This paper reports on the first phase of research that examines whether a visual illusion that makes an object appear to be larger (Delboeuf's Illusion), can help to improve point and click performance for older computer users. In this first phase, we look at the effect sizes for different configurations of the Delboeuf illusion. The study finds that the target size is overestimated by 8% for both older and younger adults in one configuration, and 12% for older adults in another configuration. The results will inform the design of a second phase, in which the configurations which demonstrate the largest effects will be investigated using a Fitts'-style study of pointing performance.},
booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {1329–1334},
numpages = {6},
keywords = {visual illusions, point and click performance, older adults, delboeuf's illusion},
