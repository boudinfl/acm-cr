@inproceedings{10.1145/2468356.2468533,
author = {Nawahdah, Mamoun and Inoue, Tomoo},
title = {Influence on User's Communication in BHS Videoconferencing: Superimposition of a Remote Person's Figure on the Local Background},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2468533},
