booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {1293–1298},
numpages = {6},
keywords = {touchless, physiological interface, gesture &amp; facial expressions, hands-free, eyes-free, mobile computing, non-contact, hands busy, headset, mobile devices},
