@inproceedings{10.1145/2468356.2479544,
author = {Mueller, Stefanie and Kruck, Bastian and Baudisch, Patrick},
title = {LaserOrigami: Laser-Cutting 3D Objects},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2479544},
doi = {10.1145/2468356.2479544},
abstract = {We present LaserOrigami, a rapid prototyping system that produces 3D objects using a laser cutter. LaserOrigami is substantially faster than traditional 3D fabrication techniques such as 3D printing and unlike traditional laser cutting the resulting 3D objects require no manual assembly. The key idea behind LaserOrigami is that it achieves three-dimensionality by folding and stretching the workpiece, rather than by placing joints, thereby eliminating the need for manual assembly. LaserOrigami achieves this by heating up selected regions of the workpiece until they become compliant and bend down under the force of gravity. LaserOrigami administers the heat by defocusing the laser, which distributes the laser's power across a larger surface. LaserOrigami implements cutting and bending in a single integrated process by automatically moving the cutting table up and down-when users take out the workpiece, it is already fully assembled. We present the three main design elements of LaserOrigami: the bend, the suspender, and the stretch, and demonstrate how to use them to fabricate a range of physical objects. Finally, we demonstrate an interactive fabrication version of LaserOrigami, a process in which user interaction and fabrication alternate step-by-step.},
booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {2851–2852},
numpages = {2},
keywords = {rapid prototyping, physical prototyping, 3d, laser cutting, interactive fabrication},
location = {Paris, France},
series = {CHI EA '13}
}

@inproceedings{10.1145/2468356.2479545,
author = {Magielse, Remco and Offermans, Serge},
title = {Future Lighting Systems},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2479545},
doi = {10.1145/2468356.2479545},
abstract = {Contemporary lighting systems may consist of many individual light sources that can be controlled on various parameters (e.g. intensity, colour, spatial position). Therefore, opening up freedom of control to the user in a comprehensive manner is a challenge. We present a lighting system with three different interfaces that suit different usage scenarios in terms of control effort and freedom. The system consists of modular ceiling tiles for down-lighting and colored wall-washing for atmospheric lighting. The LightPad allows people to quickly adjust all light sources with an expressive touch; duration and force determine respectively the light color and intensity. This could be used near the entrance of a space to quickly set the lighting. The LightCube allows users to choose between various presets that are related to different activities. The top-facing preset is activated. The LightApp is a tablet interface that allows users to control many light sources in detail using simple gestures: dragging, pinching, rotating and wiping. This could be used to create specific atmospheres, or to create presets for the LightCube.},
booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {2853–2854},
numpages = {2},
keywords = {interfaces, interactive lighting},
location = {Paris, France},
series = {CHI EA '13}
}

@inproceedings{10.1145/2468356.2479546,
author = {Ota, Jonathan and Brieger, John},
title = {Virtualized Reality},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2479546},
doi = {10.1145/2468356.2479546},
abstract = {Virtual reality is the creation of an entirely digital world. Virtualized reality is the translation of the real world into a digital space. There, the real and virtual unify. We have created an alternate reality in which participants explore their environment in third person. The physical environment is mapped by the the Kinect and presented as an abstracted virtual environment. Forced to examine reality from a new perspective, participants must determine where the boundary lies between the perceived and the actual.Virtualized Reality, at its core, is about having a linear out of body experience. First, participants put on the backpack and goggles, mentally preparing them to have a technological experience. Then, they put on the helmet, a visual cue that separates the experience they have inside of the Virtualized Reality from the physical world.},
booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {2855–2856},
numpages = {2},
keywords = {kinect, third person, point of view, gaming, virtual reality},
location = {Paris, France},
series = {CHI EA '13}
}

@inproceedings{10.1145/2468356.2479547,
author = {Ota, Jonathan},
title = {Smile! Box},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2479547},
doi = {10.1145/2468356.2479547},
abstract = {In this digital age where it is commonplace and easy to spoof passwords and other security measures, a more robust and personalized form of security needs to be developed.Our identities are not who we are now, but are shaped by our history and our relationships. What if objects that we entrust our most valuable possessions could become like a close confidant? What if your possessions could remember your interactions with it and, like a best friend, could determine who you were no matter the circumstance?The Smile! Box is a speculative design fiction project that explores the application of machine learning to everything that we claim to own. The security measures Smile! Box employs in its current state are not infallible and do not intend to be - but it seeks to ask "what if" about the future of securing one's identity. If face measurement software and hardware becomes so advanced where it is able to learn over time the nuances of one's facial expression when using or interacting with the object, spoofing our identities will become more difficult. In other words what if we needed to foster our relationships with our objects in order to ensure their safety and security, much like building and maintaining friendships or other personal relationships?},
booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {2857–2858},
numpages = {2},
keywords = {design, artificial intelligence, security, biometrics, design fiction},
location = {Paris, France},
series = {CHI EA '13}
}

@inproceedings{10.1145/2468356.2479548,
author = {Park, Young-Woo and Nam, Tek-Jin},
