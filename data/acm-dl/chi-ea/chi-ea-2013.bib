publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2468461},
doi = {10.1145/2468356.2468461},
abstract = {This paper describes the Emotional-Perspective design, a graphical-user-interface platform built to explore expression mappings. The platform utilizes emotional and social skills by shifting from representational and discrete to expression rich, contextualized and continuous-sustained interaction paradigms. A remote robot-view, used to control an assistive robot, allows people to take on the perspective of the robot and thereby explore its action-possibilities in context. This view is extended with a dynamic graphical layer (filters and shape-changing mask). This layer is expressively mapped to the robot's 'feelings' constituted by its internal conditions and direct interaction with its surrounding (environment and person). The Emotional-Perspective design will be evaluated to address the expressive mapping and the emergence of meaning in interaction.},
booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {595–600},
numpages = {6},
keywords = {mapping, expressivity, interaction design, phenomenology-inspired design},
