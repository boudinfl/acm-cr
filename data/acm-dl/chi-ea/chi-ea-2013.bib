title = {Body-Tracking Camera Control for Demonstration Videos},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2468568},
doi = {10.1145/2468356.2468568},
