@inproceedings{10.1145/2468356.2468576,
author = {Leiva, Luis A. and Alabau, Vicent and Vidal, Enrique},
title = {Error-Proof, High-Performance, and Context-Aware Gestures for Interactive Text Edition},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2468576},
