@inproceedings{10.1145/2468356.2468517,
author = {Macbeth, Jamie and Adeyema, Hanna and Lieberman, Henry and Fry, Christopher},
title = {Script-Based Story Matching for Cyberbullying Prevention},
year = {2013},
