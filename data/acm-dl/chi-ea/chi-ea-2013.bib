title = {A Timeline Visualization for Multi-Team Collaborative Planning},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2468385},
abstract = {Developing and corroborating plans for critical missions (e.g., space missions) is not a trivial task. Our research focuses on designing and evaluating a planning tool that supports a team of experts engaged in sharing, cross-validating, and refining existing plans. We designed a plan visualization tool to support multi-team collaborative planning for operations on the International Space Station. We built and evaluated two prototypes, a text-based tool representing the current practice and a new, dual timeline visualization tool. In this paper we present the design and the formative evaluation, which indicated the promise of the proposed design but also identified implementation issues.},
booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {157–162},
numpages = {6}
