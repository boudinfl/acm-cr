}

@inproceedings{10.1145/2468356.2468571,
author = {Nandi, Arnab and Mandel, Michael},
title = {The Interactive Join: Recognizing Gestures for Database Queries},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2468571},
doi = {10.1145/2468356.2468571},
