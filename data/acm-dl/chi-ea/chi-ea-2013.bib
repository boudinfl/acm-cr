booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {97–102},
numpages = {6},
keywords = {cooperative reading, highlight, e-book, reference, page-number},
location = {Paris, France},
series = {CHI EA '13}
}

@inproceedings{10.1145/2468356.2468376,
