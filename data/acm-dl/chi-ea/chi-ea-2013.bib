booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {2761–2766},
numpages = {6},
keywords = {emotional empathy, mirror neuron system, computer generated character},
location = {Paris, France},
series = {CHI EA '13}
}

@inproceedings{10.1145/2468356.2479507,
