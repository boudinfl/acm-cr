booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {1011–1016},
numpages = {6},
keywords = {tangible interaction, intimate communication, physical embodiments, mediated emotional expression},
location = {Paris, France},
series = {CHI EA '13}
}

