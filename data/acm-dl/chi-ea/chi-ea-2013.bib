booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {1203–1208},
numpages = {6},
keywords = {unsupervised classification, query interface, gesture recognition, databases},
location = {Paris, France},
series = {CHI EA '13}
}

@inproceedings{10.1145/2468356.2468572,
