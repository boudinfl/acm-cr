@inproceedings{10.1145/2468356.2468481,
author = {Lieberman, Henry and Dinakar, Karthik and Jones, Birago},
title = {Crowdsourced Ethics with Personalized Story Matching},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2468481},
doi = {10.1145/2468356.2468481},
abstract = {Cyberbullying is a widespread and growing social problem, threatening the viability of social networks for youth. We believe that one of the best ways to combat this problem is to use these incidents as "teaching moments", encouraging teens to reflect on their behavior and choices. Sites that offer community discussions around the ethical aspects of social situations can help teens feel less alone in their plight, and provide useful advice and emotional support. But the success of these "crowdsourced ethics" sites depends critically on the user feeling like discussions are relevant to their own personal experience.We have augmented the crowdsourced ethics site "Over The Line", offered by MTV Networks, with a personalized story matcher that classifies stories according to dynamically discovered high-level themes like "sending nude pictures online" or "feeling pressure in relationships". The matcher uses a mixed-initiative LDA machine learning technique [2], and a commonsense knowledge base specialized to the bullying problem. The site is currently public, and attracts an audience of thousands of users daily.},
booktitle = {CHI '13 Extended Abstracts on Human Factors in Computing Systems},
pages = {709–714},
numpages = {6},
keywords = {personalization, cyberbullying, crowdsourcing, machine learning, commonsense reasoning},
location = {Paris, France},
series = {CHI EA '13}
}

@inproceedings{10.1145/2468356.2468482,
author = {Mitgutsch, Konstantin and Schirra, Steven and Verrilli, Sara},
title = {Movers and Shakers: Designing Meaningful Conflict in a Tablet-Based Serious Game},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
