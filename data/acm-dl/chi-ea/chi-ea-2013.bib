@inproceedings{10.1145/2468356.2468400,
author = {Lee, Kangwook and Kim, Sangtae and Myaeng, Sung-Hyon},
title = {Measuring Touch Bias of One Thumb Posture on Direct Touch-Based Mobile Devices},
year = {2013},
isbn = {9781450319522},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2468356.2468400},
doi = {10.1145/2468356.2468400},
