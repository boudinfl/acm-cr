@inproceedings{10.1145/2468356.2468630,
author = {Lissermann, Roman and Huber, Jochen and Steimle, J\"{u}rgen and M\"{u}hlh\"{a}user, Max},
title = {Permulin: Collaboration on Interactive Surfaces with Personal in- and Output},
year = {2013},
isbn = {9781450319522},
