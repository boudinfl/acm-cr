series = {CHI EA '13}
}

@inproceedings{10.1145/2468356.2479556,
author = {Tomico, Oscar and van Zijverden, Mascha and Fej\'{e}r, Tom and Chen, Yiyu and Lubbers, Eef and Heuvelings, Meerthe and A\"{\i}ssaoui, Sonia and Schepperheyn, Verena},
