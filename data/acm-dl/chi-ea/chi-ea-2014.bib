booktitle = {CHI '14 Extended Abstracts on Human Factors in Computing Systems},
pages = {1525–1530},
numpages = {6},
keywords = {opengl, physically based simulation, falcon, jelly fish, modeling, haptics, real-time},
location = {Toronto, Ontario, Canada},
series = {CHI EA '14}
}

@inproceedings{10.1145/2559206.2581263,
author = {Sukale, Ryan and Pfaff, Mark S.},
title = {QuoDocs: Improving Developer Engagement in Software Documentation through Gamification},
year = {2014},
isbn = {9781450324748},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2559206.2581263},
doi = {10.1145/2559206.2581263},
