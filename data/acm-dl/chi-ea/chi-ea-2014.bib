doi = {10.1145/2559206.2581194},
abstract = {LightBundle is an optical fiber bundle for direct manipulation between the bundle and its composing strands. The bundle changes color based on user manipulation. Inspired by our daily interactions with bundles of vegetables (e.g., asparagus), LightBundle affords grabbing, peeling and twisting of bundle and strands. The metaphoric plant properties lend themselves to interaction scenarios ranging from timing, location, social awareness to energy transfer.},
booktitle = {CHI '14 Extended Abstracts on Human Factors in Computing Systems},
