@inproceedings{10.1145/2559206.2581298,
author = {Herkenrath, Gero and Huch, Carl and Heller, Florian and Borchers, Jan},
title = {Geo-Sociograms: A Method to Analyze Movement Patterns and Characterize Tasks in Location-Based Multiplayer Games},
year = {2014},
isbn = {9781450324748},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2559206.2581298},
doi = {10.1145/2559206.2581298},
abstract = {Location-based multiplayer games happen in real space so movement is not the location change of an avatar in a virtual world, but real change of a player's physical location. Additionally, movement is a core interaction of these games. This makes the distances between players a key element of the game dynamics. Annotating recorded movements requires video annotation which is time-consuming and prone to mistakes. To tackle this problem we introduce geo-sociograms as a method to visualize distances between players over time at a glance. We apply this method to existing data, showing that it leads to many of the same insights as traditional video analysis while being less time-consuming. A study indicates that geo-sociograms have the potential to help characterize types of location-based games. Ultimately, we hope that geo-sociograms will help predict movement patterns when using particular game design elements.},
booktitle = {CHI '14 Extended Abstracts on Human Factors in Computing Systems},
pages = {1501–1506},
numpages = {6},
keywords = {movement patterns, augmented reality, location-based, games, data visualization, multiplayer},
location = {Toronto, Ontario, Canada},
series = {CHI EA '14}
}

@inproceedings{10.1145/2559206.2581312,
