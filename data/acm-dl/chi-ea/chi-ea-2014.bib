booktitle = {CHI '14 Extended Abstracts on Human Factors in Computing Systems},
pages = {1615–1620},
numpages = {6},
keywords = {gestural pointing, user interface, hand tracking},
location = {Toronto, Ontario, Canada},
series = {CHI EA '14}
}

@inproceedings{10.1145/2559206.2581236,
author = {Morrison-Smith, Sarah and Ruiz, Jaime},
title = {Using Audio Cues to Support Motion Gesture Interaction on Mobile Devices},
year = {2014},
isbn = {9781450324748},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2559206.2581236},
