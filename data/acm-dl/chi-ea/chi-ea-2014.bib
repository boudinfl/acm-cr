year = {2014},
isbn = {9781450324748},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2559206.2581198},
doi = {10.1145/2559206.2581198},
abstract = {Previous work on social network sites (SNSs) tends to examine use of a single site, such as Facebook. In this survey study, we examined international students' motivations for participation in Facebook versus a site (Renren or Cyworld) from their own country. We anticipated that use of Facebook would be driven by desires to expand bridging social capital, whereas use of the home country site would be driven primarily by the desire to maintain existing bonds. A survey of 335 Chinese and Korean students in the U.S. showed that contrary to our expectations, desires to develop both bridging and bonding social ties were associated with greater intensity of activity on Facebook and the home country site. Greater intentions to interact with people from their own home country were associated with greater interaction on the home country site. Both intensity of site use and number of friends were higher for Korean than Chinese respondents. We conclude with some thoughts as to how our findings might be used to help people manage social relationships across two different sites in different countries.},
booktitle = {CHI '14 Extended Abstracts on Human Factors in Computing Systems},
pages = {2101–2106},
numpages = {6},
keywords = {social network sites, computer mediated communication},
location = {Toronto, Ontario, Canada},
series = {CHI EA '14}
}

@inproceedings{10.1145/2559206.2581230,
