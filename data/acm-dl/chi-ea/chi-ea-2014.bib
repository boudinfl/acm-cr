@inproceedings{10.1145/2559206.2581197,
author = {Tang, Richard and Alizadeh, Hesam and Tang, Anthony and Bateman, Scott and Jorge, Joaquim A.P.},
title = {Physio@Home: Design Explorations to Support Movement Guidance},
year = {2014},
isbn = {9781450324748},
publisher = {Association for Computing Machinery},
