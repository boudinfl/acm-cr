@inproceedings{10.1145/2559206.2581188,
author = {Arif, Ahmed Sabbir and Stuerzlinger, Wolfgang and Filho, Euclides Jose de Mendonca and Gordynski, Alec},
title = {Error Behaviours in an Unreliable In-Air Gesture Recognizer},
year = {2014},
isbn = {9781450324748},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2559206.2581188},
