@inproceedings{10.1145/2559206.2581301,
author = {Seyed, Teddy and Marinho Rodrigues, Francisco and Maurer, Frank and Tang, Anthony},
title = {Medical Imaging Specialists and 3D: A Domain Perspective on Mobile 3D Interactions},
year = {2014},
isbn = {9781450324748},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2559206.2581301},
doi = {10.1145/2559206.2581301},
