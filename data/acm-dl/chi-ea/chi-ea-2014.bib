@inproceedings{10.1145/2559206.2581207,
author = {Tanaka, Takahiro and Taatgen, Niels and Aoki, Kazuaki and Fujita, Kinya},
title = {Resumption Lag at Interruptible Timing Might Not Be Short in Actual Environment},
year = {2014},
isbn = {9781450324748},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2559206.2581207},
