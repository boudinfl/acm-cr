title = {Personal Space: User Defined Gesture Space for GUI Interaction},
year = {2014},
isbn = {9781450324748},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2559206.2581242},
