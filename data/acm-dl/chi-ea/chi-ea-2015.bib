abstract = {In this study we propose and evaluate a novel approach that allows detection of physical eye fatigue. The proposed approach is based on the analysis of the recorded eye movements via what is called behavioral scores. These easy-to-compute scores can be obtained immediately after a calibration procedure, via processing of such basic eye movements as fixations and saccades extracted from the raw eye positional data recorded by an eye tracker. The results, based on the data from 36 volunteers indicate that one of the behavioral scores, Fixational Qualitative Score, is more sensitive to the onset of eye fatigue than already established methods based on saccadic characteristics only.},
booktitle = {Proceedings of the 33rd Annual ACM Conference Extended Abstracts on Human Factors in Computing Systems},
pages = {1265–1270},
