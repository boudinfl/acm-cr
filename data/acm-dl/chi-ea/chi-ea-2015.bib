booktitle = {Proceedings of the 33rd Annual ACM Conference Extended Abstracts on Human Factors in Computing Systems},
pages = {953–958},
numpages = {6},
keywords = {web browsing, augmented reality, parallel browsing, multimodal interaction, tangible user interface},
