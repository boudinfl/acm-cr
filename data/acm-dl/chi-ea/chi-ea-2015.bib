author = {AlSada, Mohammed and Nakajima, Tatsuo},
title = {Parallel Web Browsing in Tangible Augmented Reality Environments},
year = {2015},
isbn = {9781450331463},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2702613.2732746},
