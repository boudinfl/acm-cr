@inproceedings{10.1145/2702613.2732859,
author = {Kim, Haechan and Lee, Kun-Pyo},
title = {Express Driver's Emotion with Emoticons in Driving Contexts},
year = {2015},
isbn = {9781450331463},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2702613.2732859},
