@inproceedings{10.1145/1840784.1840806,
author = {Golovchinsky, Gene and Pickens, Jeremy},
title = {Interactive Information Seeking via Selective Application of Contextual Knowledge},
year = {2010},
isbn = {9781450302470},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1840784.1840806},
