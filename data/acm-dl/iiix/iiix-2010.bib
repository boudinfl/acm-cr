booktitle = {Proceedings of the Third Symposium on Information Interaction in Context},
pages = {265–270},
numpages = {6},
keywords = {diary study, mobile traveling, contextual factors, information needs, association rule mining},
location = {New Brunswick, New Jersey, USA},
