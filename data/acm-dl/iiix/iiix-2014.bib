@inproceedings{10.1145/2637002.2637035,
author = {Russell-Rose, Tony and Clough, Paul and Toms, Elaine G.},
title = {Categorising Search Sessions: Some Insights from Human Judgments},
year = {2014},
isbn = {9781450329767},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2637002.2637035},
