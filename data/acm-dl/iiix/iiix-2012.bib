@inproceedings{10.1145/2362724.2362764,
author = {Arvola, Paavo and Vainio, Johanna and Junkkari, Marko and Kek\"{a}l\"{a}inen, Jaana},
title = {Model for Simulating Result Document Browsing in Focused Retrieval},
