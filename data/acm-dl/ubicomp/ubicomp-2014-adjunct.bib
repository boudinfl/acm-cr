pages = {1113–1121},
numpages = {9},
keywords = {HCI, Kinect, RGBD-sensor-based eye gaze tracking, RGBD sensor, eye gaze, gaze and eye movement analysis methods, pervasive eye-based interaction, multi-modal sensor fusion},
location = {Seattle, Washington},
series = {UbiComp '14 Adjunct}
}

