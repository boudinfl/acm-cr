@inproceedings{10.1145/2638728.2638736,
author = {Chattopadhyay, Debaleena and Achmiz, Said and Saxena, Shivin and Bansal, Malvika and Bolchini, Davide and Voida, Stephen},
title = {Holes, Pits, and Valleys: Guiding Large-Display Touchless Interactions with Data-Morphed Topographies},
year = {2014},
isbn = {9781450330473},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2638728.2638736},
doi = {10.1145/2638728.2638736},
abstract = {Large, high-resolution displays enable efficient visualization of large datasets. To interact with these large datasets, touchless interfaces can support fluid interaction at different distances from the display. Touchless gestures, however, lack haptic feedback. Hence, users' gestures may unintentionally move off the interface elements and require additional physical effort to perform intended actions. To address this problem, we propose data-morphed topographies for touchless interactions: constraints on users' cursor movements that guide touchless interaction along the structure of the visualized data. To exemplify the potential of our concept, we envision applying three data-morphed topographies---holes, pits, and valleys---to common problem-solving tasks in visual analytics.},
booktitle = {Proceedings of the 2014 ACM International Joint Conference on Pervasive and Ubiquitous Computing: Adjunct Publication},
pages = {19–22},
numpages = {4},
keywords = {topography, information visualization, large-display interfaces, touchless interactions},
location = {Seattle, Washington},
series = {UbiComp '14 Adjunct}
}

@inproceedings{10.1145/2638728.2638801,
author = {Chen, Zhenyu and Chen, Yiqiang and Hu, Lisha and Wang, Shuangquan and Jiang, Xinlong and Ma, Xiaojuan and Lane, Nicholas D. and Campbell, Andrew T.},
title = {ContextSense: Unobtrusive Discovery of Incremental Social Context Using Dynamic Bluetooth Data},
year = {2014},
isbn = {9781450330473},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2638728.2638801},
doi = {10.1145/2638728.2638801},
abstract = {User-centric ambient social contexts can be effectively captured by dynamic bluetooth data. However, conventional approaches for training classifiers struggle with social contexts that are incrementally constructed and continuously discovered in everyday environments. Incremental social contexts can confuse a classifier because it assumes that the number and composition of context classes is fixed throughout training and inference phases. To address this challenge we propose ContextSense, an ELM-based learning method for continuous and unobtrusive discovery of new social contexts incrementally from dynamic bluetooth data. Experimental results show that ContextSense can automatically cope with "incremental social context" classes that appear unpredictably in the real-world.},
booktitle = {Proceedings of the 2014 ACM International Joint Conference on Pervasive and Ubiquitous Computing: Adjunct Publication},
pages = {23–26},
numpages = {4},
keywords = {class-incremental learning, bluetooth, extreme learning machine, incremental social context, fuzzy clustering},
location = {Seattle, Washington},
series = {UbiComp '14 Adjunct}
}

@inproceedings{10.1145/2638728.2638787,
author = {Chung, Chia-Fang and Hwang, James and Munson, Sean A.},
title = {Temperature Sharing to Support Remote Relationships},
year = {2014},
isbn = {9781450330473},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2638728.2638787},
