booktitle = {Proceedings of the 11th International Conference on Ubiquitous Computing},
pages = {155–164},
numpages = {10},
keywords = {privacy, trust, ubicomp4d, ict4d, urban slums, low-income communities, india, mobile technologies},
location = {Orlando, Florida, USA},
series = {UbiComp '09}
