@inproceedings{10.1145/1620545.1620570,
author = {Sambasivan, Nithya and Rangaswamy, Nimmi and Cutrell, Ed and Nardi, Bonnie},
title = {<i>Ubicomp4D</i>: Infrastructure and Interaction for International Development--the Case of Urban Indian Slums},
year = {2009},
isbn = {9781605584317},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1620545.1620570},
doi = {10.1145/1620545.1620570},
