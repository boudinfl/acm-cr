author = {M\"{u}ller, Lars},
title = {Solving the Wrong Problem: When Technology is Making Us Blind},
year = {2017},
isbn = {9781450351904},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3123024.3124396},
