}

@inproceedings{10.1145/3341162.3344872,
author = {Wang, Lin and Gjoreski, Hristijan and Ciliberto, Mathias and Lago, Paula and Murao, Kazuya and Okita, Tsuyoshi and Roggen, Daniel},
title = {Summary of the Sussex-Huawei Locomotion-Transportation Recognition Challenge 2019},
year = {2019},
isbn = {9781450368698},
