@inproceedings{10.1145/3341162.3344838,
author = {Woodward, Kieran and Kanjo, Eiman and Umair, Muhammad and Sas, Corina},
title = {Harnessing Digital Phenotyping to Deliver Real-Time Interventional Bio-Feedback},
year = {2019},
