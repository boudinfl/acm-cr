pages = {1614–1619},
numpages = {6},
keywords = {lighting control, user experience, connected lighting},
location = {Heidelberg, Germany},
series = {UbiComp '16}
}

@inproceedings{10.1145/2968219.2968523,
author = {Wang, X. and Linnartz, J. P. and Tjalkens, T.},
