@inproceedings{10.1145/2968219.2971406,
author = {Zhang, Jiafan and Guo, Bin and Han, Qi and Ouyang, Yi and Yu, Zhiwen},
title = {CrowdStory: Multi-Layered Event Storyline Generation with Mobile Crowdsourced Data},
