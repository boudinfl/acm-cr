@inproceedings{10.1145/2968219.2968535,
author = {Jones, Michael and Walker, Casey and Anderson, Zann and Thatcher, Lawrence},
title = {Automatic Detection of Alpine Ski Turns in Sensor Data},
year = {2016},
isbn = {9781450344623},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2968219.2968535},
