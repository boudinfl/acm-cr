@inproceedings{10.1145/2493432.2493440,
author = {Bao, Xuan and Fan, Songchun and Varshavsky, Alexander and Li, Kevin and Roy Choudhury, Romit},
title = {Your Reactions Suggest You Liked the Movie: Automatic Content Rating via Reaction Sensing},
