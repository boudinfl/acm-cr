@inproceedings{10.1145/2493432.2493510,
author = {Bilogrevic, Igor and Huguenin, K\'{e}vin and Agir, Berker and Jadliwala, Murtuza and Hubaux, Jean-Pierre},
title = {Adaptive Information-Sharing for Privacy-Aware Mobile Social Networks},
year = {2013},
isbn = {9781450317702},
