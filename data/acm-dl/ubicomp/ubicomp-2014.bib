@inproceedings{10.1145/2632048.2636084,
author = {Hevesi, Peter and Wille, Sebastian and Pirkl, Gerald and Wehn, Norbert and Lukowicz, Paul},
title = {Monitoring Household Activities and User Location with a Cheap, Unobtrusive Thermal Sensor Array},
year = {2014},
isbn = {9781450329682},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
