}

@inproceedings{10.1145/2632048.2632070,
author = {Matic, Aleksandar and Hayes, Gillian R. and Tentori, Monica and Abdullah, Maryam and Schuck, Sabrina},
title = {Collective Use of a Situated Display to Encourage Positive Behaviors in Children with Behavioral Challenges},
year = {2014},
