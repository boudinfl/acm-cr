@inproceedings{10.1145/3267305.3267517,
author = {Ito, Chihiro and Cao, Xin and Shuzo, Masaki and Maeda, Eisaku},
title = {Application of CNN for Human Activity Recognition with FFT Spectrogram of Acceleration and Gyro Sensors},
