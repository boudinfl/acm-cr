@inproceedings{10.1145/3267305.3274115,
author = {Falc\~{a}o, Jo\~{a}o Diogo and Krebs, Joel and Kumar, Sumeet and Erdogmus, Hakan},
title = {OpenAlerts: A Software System to Evaluate Smart Emergency Alerts and Notifications},
