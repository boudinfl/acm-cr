booktitle = {Proceedings of the 18th International Conference on World Wide Web},
pages = {1217–1218},
numpages = {2},
keywords = {search, social networks, social, user content, web2.0, 2.0},
location = {Madrid, Spain},
series = {WWW '09}
}

@inproceedings{10.1145/1526709.1526937,
