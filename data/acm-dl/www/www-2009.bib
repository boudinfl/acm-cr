pages = {1069–1070},
numpages = {2},
keywords = {web form mapping, web data extraction, web form extraction, hidden web},
location = {Madrid, Spain},
series = {WWW '09}
}

@inproceedings{10.1145/1526709.1526861,
author = {Dasdan, Ali and Drome, Chris and Kolay, Santanu},
