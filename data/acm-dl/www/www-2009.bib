booktitle = {Proceedings of the 18th International Conference on World Wide Web},
pages = {1111–1112},
numpages = {2},
keywords = {javascript, replay, web, benchmark, browser},
location = {Madrid, Spain},
series = {WWW '09}
}

@inproceedings{10.1145/1526709.1526883,
