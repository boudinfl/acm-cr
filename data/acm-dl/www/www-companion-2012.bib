pages = {747–750},
numpages = {4},
keywords = {social networks, personal workflows, experience reuse},
location = {Lyon, France},
series = {WWW '12 Companion}
}

@inproceedings{10.1145/2187980.2188196,
author = {Zarka, Raafat and Cordier, Am\'{e}lie and Egyed-Zsigmond, El\"{o}d and Mille, Alain},
title = {Contextual Trace-Based Video Recommendations},
year = {2012},
isbn = {9781450312301},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
