@inproceedings{10.1145/2187980.2188244,
author = {Skaf-Molli, Hala and Desmontils, Emmanuel and Nauer, Emmanuel and Canals, G\'{e}r\^{o}me and Cordier, Am\'{e}lie and Lefevre, Marie and Molli, Pascal and Toussaint, Yannick},
