@inproceedings{10.1145/3184558.3191597,
author = {Kacprzak, Emilia and Koesten, Laura and Tennison, Jeni and Simperl, Elena},
title = {Characterising Dataset Search Queries},
year = {2018},
isbn = {9781450356404},
publisher = {International World Wide Web Conferences Steering Committee},
address = {Republic and Canton of Geneva, CHE},
url = {https://doi.org/10.1145/3184558.3191597},
doi = {10.1145/3184558.3191597},
abstract = {The amount of data generated and published on the web is increasing rapidly, but search for structured data on the web still presents challenges. In this paper we explore dataset search by analysing queries specifically generated for this work through a crowdsourcing experiment and comparing them to a search log analysis of queries on data portals. The change in search environment together with the task we gave people altered the generated queries. We found that queries issued in our experiment were much longer than search queries for datasets on data portals. They further contained seven times more mentions of geospatial and of temporal information and are more likely to be structured as questions. These insights can be used to tailor search functionalities to the particular information needs and characteristics of dataset search.},
booktitle = {Companion Proceedings of the The Web Conference 2018},
pages = {1485–1488},
numpages = {4},
keywords = {query generation, search log analysis, dataset search},
location = {Lyon, France},
series = {WWW '18}
