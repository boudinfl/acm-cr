@inproceedings{10.1145/3184558.3192300,
author = {Ciampaglia, Giovanni Luca and Lerman, Kristina and Metaxas, Panagiotis},
title = {Journalism, Misinformation and Fact Checking Chairs' Welcome &amp; Organization},
