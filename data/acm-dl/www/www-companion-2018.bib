@inproceedings{10.1145/3184558.3191644,
author = {Gundala, Laxmi Amulya and Spezzano, Francesca},
title = {Readers' Demanded Hyperlink Prediction in Wikipedia},
year = {2018},
isbn = {9781450356404},
publisher = {International World Wide Web Conferences Steering Committee},
address = {Republic and Canton of Geneva, CHE},
url = {https://doi.org/10.1145/3184558.3191644},
