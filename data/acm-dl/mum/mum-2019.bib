@inproceedings{10.1145/3365610.3368410,
author = {Colley, Ashley and Raudanjoki, \"{O}zge and Mikkonen, Kirsi and H\"{a}kkil\"{a}, Jonna},
title = {Plant Shadow Morphing as a Peripheral Display},
year = {2019},
isbn = {9781450376242},
