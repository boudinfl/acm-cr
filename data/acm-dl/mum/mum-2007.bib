@inproceedings{10.1145/1329469.1329488,
author = {Scheible, J\"{u}rgen and Tuulos, Ville H. and Ojala, Timo},
title = {Story Mashup: Design and Evaluation of Novel Interactive Storytelling Game for Mobile and Web Users},
year = {2007},
isbn = {9781595939166},
publisher = {Association for Computing Machinery},
