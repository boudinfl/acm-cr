@inproceedings{10.1145/1329469.1329493,
author = {\"{O}quist, Gustav and Lundin, Kristin},
title = {Eye Movement Study of Reading Text on a Mobile Phone Using Paging, Scrolling, Leading, and RSVP},
year = {2007},
