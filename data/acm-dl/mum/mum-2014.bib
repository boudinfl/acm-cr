@inproceedings{10.1145/2677972.2677998,
author = {M\"{a}kel\"{a}, Ville and Heimonen, Tomi and Luhtala, Matti and Turunen, Markku},
title = {Information Wall: Evaluation of a Gesture-Controlled Public Display},
year = {2014},
isbn = {9781450333047},
