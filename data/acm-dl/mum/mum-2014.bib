@inproceedings{10.1145/2677972.2677996,
author = {V\"{a}\"{a}n\"{a}nen-Vainio-Mattila, Kaisa and Heikkinen, Jani and Farooq, Ahmed and Evreinov, Grigori and M\"{a}kinen, Erno and Raisamo, Roope},
title = {User Experience and Expectations of Haptic Feedback in In-Car Interaction},
year = {2014},
isbn = {9781450333047},
publisher = {Association for Computing Machinery},
