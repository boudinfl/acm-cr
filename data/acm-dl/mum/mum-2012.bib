@inproceedings{10.1145/2406367.2406435,
author = {Mayer, Simon and Beckel, Christian and Scheidegger, Bram and Barthels, Claude and S\"{o}r\"{o}s, G\'{a}bor},
title = {Demo: Uncovering Device Whispers in Smart Homes},
