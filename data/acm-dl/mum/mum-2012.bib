@inproceedings{10.1145/2406367.2406407,
author = {Seebode, Julia and Schleicher, Robert and M\"{o}ller, Sebastian},
title = {Affective Quality of Audio Feedback in Different Contexts},
year = {2012},
isbn = {9781450318150},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2406367.2406407},
