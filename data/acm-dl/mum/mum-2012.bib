title = {Assessing the Impact of Language Style on Emergent Leadership Perception from Ubiquitous Audio},
year = {2012},
isbn = {9781450318150},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2406367.2406408},
