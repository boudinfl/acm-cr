&lt;div class="csl-entry"&gt;&lt;div class="csl-right-inline"&gt;@article{10.1145/1988852.1988870,
author = {Fern\'{a}ndez, Ronald T.},
title = {Improving Search Effectiveness in Sentence Retrieval and Novelty Detection},
year = {2011},
issue_date = {June 2011},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
volume = {45},
