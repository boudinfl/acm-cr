@article{10.1145/2093346.2093354,
author = {Belkin, Nicholas J. and Clarke, Charles L.A. and Gao, Ning and Kamps, Jaap and Karlgren, Jussi},
title = {Report on the SIGIR Workshop on "Entertain Me": Supporting Complex Search Tasks},
year = {2012},
