pages = {79–88},
numpages = {10},
keywords = {elder care, medication, external cognition, adherence, distributed cognition, health care, assisted living, pharmaceuticals, drugs, intelligent environments, compliance},
location = {Banff, Alberta, Canada},
series = {CSCW '06}
}

@inproceedings{10.1145/1180875.1180890,
