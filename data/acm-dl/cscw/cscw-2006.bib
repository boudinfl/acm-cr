author = {Munkvold, Glenn and Ellingsen, Gunnar and Koksvik, Hege},
title = {Formalizing Work: Reallocating Redundancy},
year = {2006},
isbn = {1595932496},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1180875.1180886},
