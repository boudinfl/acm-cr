doi = {10.1145/1180875.1180930},
abstract = {In this study, we draw on network centrality concepts and coordination theory to understand how project team members interact when working towards a common goal. A text-mining application based on the constructs of coordination theory was developed to measure the coordinative activity of each employee. Results show that high network centrality is correlated with the ability of an actor to coordinate actions of others in a project group. Furthermore, highly centralised actors coordinate better than others. In conclusion, we suggest implications of appropriate network structure for supporting organisational coordination more effectively and efficiently.},
booktitle = {Proceedings of the 2006 20th Anniversary Conference on Computer Supported Cooperative Work},
pages = {363–372},
numpages = {10},
keywords = {communication, coordination, email content analysis, network structure, social network, actor centrality},
location = {Banff, Alberta, Canada},
series = {CSCW '06}
}

@inproceedings{10.1145/1180875.1180932,
