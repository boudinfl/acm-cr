@inproceedings{10.5555/504800.504864,
author = {Zachry, Mark},
title = {The Ecology of an Online Education Site in Professional Communication},
year = {2000},
isbn = {0780364317},
publisher = {IEEE Educational Activities Department},
address = {USA},
