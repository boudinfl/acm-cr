@inproceedings{10.5555/504800.504830,
author = {Rubens, Brenda},
title = {Reactions of Computer Savvy Users to Information on the Intranet},
year = {2000},
isbn = {0780364317},
publisher = {IEEE Educational Activities Department},
address = {USA},
abstract = {Providing a corporate Human Resources Web site to enable employee's access to their benefits and health benefits information is a sensible use of the Intranet and a worthy goal. However, the road to that destination is traveled by a wide variety of users and is filled with many obstacles. Even after you have arrived at your destination, there are still many surprises in store for you. As the designer/developer of the Web site, as well as an employee of the company, you may naively assume you know your audience very well. After all, you are a member of the same audience! This dual role of audience member and designer is both a strength and a weakness. You may be tempted to take your users for granted and assume that you know what's best for them. This paper emphasizes the importance of knowing your audience and the need for iterative design and usability testing; it also presents the reactions of your users to the design that you so carefully tested with them prior to implementation. No matter how carefully you plan and how well you think you know your users and have anticipated their needs, their responses to your well-crafted product will never cease to amaze you. Often, there is a problem in the interpretation of the requirements - maybe you didn't really implement exactly what the users had in mind or you provided them with what you assumed was an acceptable compromise. In these situations, you have to accept the responsibility and decide what to do next. However, the users of your product, in this case a Web site, also have some responsibilities. This paper discusses the responsibilities of both designers and users.},
booktitle = {Proceedings of IEEE Professional Communication Society International Professional Communication Conference and Proceedings of the 18th Annual ACM International Conference on Computer Documentation: Technology &amp; Teamwork},
pages = {191–196},
numpages = {6},
location = {Cambridge, Massachusetts},
series = {IPCC/SIGDOC '00}
}

@inproceedings{10.5555/504800.504831,
author = {McNay, Heather E.},
title = {Corporate Intranets: Building Communities with Data},
year = {2000},
isbn = {0780364317},
publisher = {IEEE Educational Activities Department},
address = {USA},
abstract = {We have seen phenomenal growth in corporate Intranets in just the past few years and they have fundamentally changed the way we do business. There are two main benefits of a corporate Intranet. One is to provide a central location for all corporate information and the other is to build a sense of community to a dispersed work force. Most Intranets start as a tool for distributing company policies and benefits information. If this base site is done correctly the next phase of growth is more like an explosion.The user base of these Intranets is also evolving. Today's corporations consist of a wider variety of employees than ever before. A typical business division will include office-based employees in various locations, telecommuting home-based employees, contract employees, and consultants. This type of business environment can lead to a lack of communication and lack of company loyalty. Therefore, to communicate with these workers, encourage them to share knowledge, and build a sense of community, many corporations are carefully crafting Intranets that are useful, yet inviting, tools.},
