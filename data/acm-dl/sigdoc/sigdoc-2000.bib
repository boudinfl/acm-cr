@inproceedings{10.5555/504800.504875,
author = {Green, Robin},
title = {What You Installed is What You See: Help Navigation in Modular Software Products},
year = {2000},
isbn = {0780364317},
publisher = {IEEE Educational Activities Department},
address = {USA},
abstract = {As software becomes increasingly modular and componentized, giving users more control over what components they install and use, the challenge of creating useful, task-based navigation hierarchies becomes more complex. Help navigation needs to reflect the tasks a user can actually perform, given the components that were installed. This presents organizational and writing challenges for writers and technical challenges for help delivery systems. This paper examines a number of existing and possible future ways of implementing document navigation in a componentized software product and recommends approaches for future projects.},
