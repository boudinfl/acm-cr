@inproceedings{10.5555/504800.504851,
author = {Barnum, Carol M.},
title = {Building a Team for User-Centered Design},
year = {2000},
isbn = {0780364317},
publisher = {IEEE Educational Activities Department},
address = {USA},
abstract = {This paper presents the building blocks for building a team for user-centered design. These building blocks include an understanding of the skills needed for team members representing various aspects of the user experience, as well as the advantages of using a team-approach to user-center design. To have a successful experience, team members must understand the stages of group formation, the roles required for group success, the place of conflict in group process, the nature of leadership, and the dynamics of successful teams.},
