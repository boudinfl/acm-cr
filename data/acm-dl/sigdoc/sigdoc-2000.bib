@inproceedings{10.5555/504800.504883,
author = {Zimmerman, Don and Walls, Pat},
title = {Exploring Navigational Patterns on the Web},
year = {2000},
isbn = {0780364317},
publisher = {IEEE Educational Activities Department},
address = {USA},
abstract = {We report on our preliminary analyses of our research designed to determine the navigational patterns users follow in Web and hierarchical Web sites. In all 33 participants completed the study using a within-subjects, Greco-Latin design where each person viewed two sites-one organized in Web structure and one organized in a hierarchical structure. The results suggest no significant difference in participants' perceptions of their navigation of the sites, the sites' ease of use, feeling lost, and organization of the sites.},
