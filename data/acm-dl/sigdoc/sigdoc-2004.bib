@inproceedings{10.1145/1026533.1026565,
author = {MacKinnon, Neil and Murphy, Steve},
title = {Designing UML Diagrams for Technical Documentation: Continuing the Collaborative Approach to Publishing Class Diagrams},
year = {2004},
isbn = {1581138091},
