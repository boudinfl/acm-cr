publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1026533.1026539},
doi = {10.1145/1026533.1026539},
abstract = {Coh-Metrix is a web-based application currently in development that automatically evaluates text. It uses two central concepts from discourse processing: text-based cohesion and situation-model based coherence. Cohesion is the degree to which components of the text are linked. Coherence is the representation of the world that the text conveys. Our intention is for Coh-Metrix to eventually map the cohesion of a text to the background knowledge and reading skills of the reader. Coh-Metrix will then be able to give feedback to a writer about which aspects of the text are cohesive and which lack cohesion. This will enable the writer to determine which aspects of the text need to be improved. Applications of Coh-Metrix on document quality as well as other future directions for the development of Coh-Metrix are discussed.},
booktitle = {Proceedings of the 22nd Annual International Conference on Design of Communication: The Engineering of Quality Documentation},
pages = {14–16},
numpages = {3},
keywords = {cohesion, text analysis, document evaluation, writing tools},
location = {Memphis, Tennessee, USA},
series = {SIGDOC '04}
}

