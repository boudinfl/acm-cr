@inproceedings{10.1145/2987592.2987617,
author = {de Lima Salgado, Andr\'{e} and Rodrigues, Sandra Souza and Fortes, Renata Pontin M.},
title = {Evolving Heuristic Evaluation for Multiple Contexts and Audiences: Perspectives from a Mapping Study},
year = {2016},
isbn = {9781450344951},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2987592.2987617},
