@inproceedings{10.1145/2987592.2987610,
author = {Salvo, Michael J.},
title = {Sites of Experience Architecture: Methodology for Community Formation},
year = {2016},
isbn = {9781450344951},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2987592.2987610},
doi = {10.1145/2987592.2987610},
abstract = {Recent attempts to define core interests of technical communication act as distraction of a priori definition of the field. In contrast, this technical paper uses a descriptive method for articulating existing core interests and sites of productive study, ranging from memorials to applications to videogame spaces. Prescriptive definitions reveal temptations of defining core interests and limit future potential. Productive research will, over time, describe core interests and provide sustainable means of supporting the field's growth as well as clarifying productive sites for research. To define the boundaries of productive research prior to conducting exploratory research establishes artificial boundaries, labels some practices legitimate while delegitimizing others, and impedes development of method, practices, and sites. The presentation offers a name for a broad array of emerging research practices of Experience Architecture suitable for a variety of workplace context by stressing descriptions of emergent research over prescribing practice.},
booktitle = {Proceedings of the 34th ACM International Conference on the Design of Communication},
articleno = {12},
numpages = {5},
keywords = {User Experience Design, Information Architecture, Experience architecture, Methodology, Information Design, XA},
