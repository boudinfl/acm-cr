@inproceedings{10.1145/2505515.2508198,
author = {Chan, Simon and Stone, Thomas and Szeto, Kit Pang and Chan, Ka Hou},
title = {PredictionIO: A Distributed Machine Learning Server for Practical Software Development},
year = {2013},
isbn = {9781450322638},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2505515.2508198},
