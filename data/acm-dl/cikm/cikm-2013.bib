}

@inproceedings{10.1145/2505515.2507823,
author = {Li, Dong and Xu, Zhiming and Luo, Yishu and Li, Sheng and Gupta, Anika and Sycara, Katia and Luo, Shengmei and Hu, Lei and Chen, Hong},
title = {Modeling Information Diffusion over Social Networks for Temporal Dynamic Prediction},
year = {2013},
isbn = {9781450322638},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2505515.2507823},
doi = {10.1145/2505515.2507823},
abstract = {How to model the process of information diffusion in social networks is a critical research task. Although numerous attempts have been made for this study, few of them can simulate and predict the temporal dynamics of the diffusion process. To address this problem, we propose a novel information diffusion model (GT model), which considers the users in network as intelligent agents. The agent jointly considers all his interacting neighbors and calculates the payoffs for his different choices to make strategic decision. We introduce the time factor into the user payoff, enabling the GT model to not only predict the behavior of a user but also to predict when he will perform the behavior. Both the global influence and social influence are explored in the time-dependent payoff calculation, where a new social influence representation method is designed to fully capture the temporal dynamic properties of social influence between users. Experimental results on Sina Weibo and Flickr validate the effectiveness of our methods.},
booktitle = {Proceedings of the 22nd ACM International Conference on Information &amp; Knowledge Management},
pages = {1477–1480},
numpages = {4},
keywords = {prediction, information diffusion, intelligent agents, model},
location = {San Francisco, California, USA},
series = {CIKM '13}
}

@inproceedings{10.1145/2505515.2507824,
author = {Can, Ethem F. and Oktay, H\"{u}seyin and Manmatha, R.},
title = {Predicting Retweet Count Using Visual Cues},
year = {2013},
isbn = {9781450322638},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2505515.2507824},
