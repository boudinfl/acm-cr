@inproceedings{10.1145/2661829.2661833,
author = {Derntl, Michael and G\"{u}nnemann, Nikou and Tillmann, Alexander and Klamma, Ralf and Jarke, Matthias},
title = {Building and Exploring Dynamic Topic Models on the Web},
year = {2014},
isbn = {9781450325981},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2661829.2661833},
doi = {10.1145/2661829.2661833},
abstract = {Topic modeling is a machine learning technique that identifies latent topics in a text corpus. There are several existing tools that allow end-users to create and explore topic models using graphical user interfaces. In this paper, we present a visual analytics system for dynamic topic models that goes beyond the existing breed of tools. First, it decouples the Web-based user interface from the underlying data sets, enabling exploration of arbitrary text data sets in the Web browser. Second, it allows users to explore dynamic topic models, while existing tools are often limited to static topic models. Finally, it comes with a tool server in the backend that allows the design and execution of scientific workflows to build topic models from any data source. The system is demonstrated by building and exploring a dynamic topic model of CIKM proceedings published since 2001.},
booktitle = {Proceedings of the 23rd ACM International Conference on Conference on Information and Knowledge Management},
pages = {2012–2014},
numpages = {3},
keywords = {visual analytics, text mining, topic models, web crawling},
