@inproceedings{10.1145/2661829.2661853,
author = {Van Laere, Olivier and Bordino, Ilaria and Mejova, Yelena and Lalmas, Mounia},
title = {DEESSE: Entity-Driven Exploratory and SErendipitous Search SystEm},
year = {2014},
isbn = {9781450325981},
