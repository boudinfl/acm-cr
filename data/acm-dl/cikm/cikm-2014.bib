@inproceedings{10.1145/2661829.2661838,
author = {Yao, Lina and Sheng, Quan Z. and Ngu, Anne H.H. and Gao, Byron},
title = {Keeping You in the Loop: Enabling Web-Based Things Management in the Internet of Things},
