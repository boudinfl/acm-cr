@inproceedings{10.1145/2983323.2983881,
author = {Liu, Zhi and Huang, Yan},
title = {Where Are You Tweeting? A Context and User Movement Based Approach},
year = {2016},
isbn = {9781450340731},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2983323.2983881},
