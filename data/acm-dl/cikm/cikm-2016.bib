series = {CIKM '16}
}

@inproceedings{10.1145/2983323.2983346,
author = {Shaabani, Elham and Alvari, Hamidreza and Shakarian, Paulo and Snyder, J.E. Kelly},
title = {MIST: Missing Person Intelligence Synthesis Toolkit},
year = {2016},
isbn = {9781450340731},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2983323.2983346},
