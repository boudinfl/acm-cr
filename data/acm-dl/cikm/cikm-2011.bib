@inproceedings{10.1145/2063576.2064011,
author = {Ronzano, Francesco and Marchetti, Andrea and Tesconi, Maurizio},
title = {Editing Knowledge Resources: The Wiki Way},
year = {2011},
isbn = {9781450307178},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
