@inproceedings{10.1145/2063576.2063884,
author = {Duan, Huizhong and Li, Rui and Zhai, ChengXiang},
title = {Automatic Query Reformulation with Syntactic Operators to Alleviate Search Difficulty},
year = {2011},
isbn = {9781450307178},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2063576.2063884},
doi = {10.1145/2063576.2063884},
abstract = {Modern search engines usually provide a query language with a set of advanced syntactic operators (e.g., plus sign to require a term's appearance, or quotation marks to require a phrase's appearance) which if used appropriately, can significantly improve the effectiveness of a plain keyword query. However, they are rarely used by ordinary users due to the intrinsic difficulties and users' lack of corpora statistics. In this paper, we propose to automatically reformulate queries that do not work well by selectively adding syntactic operators. Particularly, we propose to perform syntactic operator-based query reformulation when a retrieval system detects users encounter difficulty in search as indicated by users' behaviors such as scanning over top k documents without click-through. We frame the problem of automatic reformulation with syntactic operators as a supervised learning problem, and propose a set of effective features to represent queries with syntactic operators. Experiment results verify the effectiveness of the proposed method and its applicability as a query suggestion mechanism for search engines. As a negative feedback strategy, syntactic operator-based query reformulation also shows promising results in improving search results for difficult queries as compared with existing methods.},
booktitle = {Proceedings of the 20th ACM International Conference on Information and Knowledge Management},
pages = {2037–2040},
numpages = {4},
keywords = {query reformulation, search difficulty., syntactic operator},
location = {Glasgow, Scotland, UK},
series = {CIKM '11}
}

@inproceedings{10.1145/2063576.2063885,
author = {Li, Baichuan and King, Irwin and Lyu, Michael R.},
title = {Question Routing in Community Question Answering: Putting Category in Its Place},
year = {2011},
isbn = {9781450307178},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2063576.2063885},
doi = {10.1145/2063576.2063885},
abstract = {This paper investigates a ground-breaking incorporation of question category to Question Routing (QR) in Community Question Answering (CQA) services. The incorporation of question category was designed to estimate answerer expertise for routing questions to potential answerers. Two category-sensitive Language Models (LMs) were developed with large-scale real world data sets being experimented. Results demonstrated that higher accuracies of routing questions with lower computational costs were achieved, relative to traditional Query Likelihood LM (QLLM), state-of-the-art Cluster-Based LM (CBLM) and the mixture of Latent Dirichlet Allocation and QLLM (LDALM).},
booktitle = {Proceedings of the 20th ACM International Conference on Information and Knowledge Management},
pages = {2041–2044},
numpages = {4},
keywords = {question category, category-sensitive language model, question routing, community question answering},
location = {Glasgow, Scotland, UK},
