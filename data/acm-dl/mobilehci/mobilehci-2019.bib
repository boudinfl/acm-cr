@inproceedings{10.1145/3338286.3344425,
author = {Tio, Evelyn and Torkildson, Megan and Su, Denise and Toussaint, Heidi and Bhargava, Aditi and Shaikh, Dawn},
title = {Measuring Holistic User Experience: Keeping an Eye on What Matters Most to Users},
year = {2019},
isbn = {9781450368254},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3338286.3344425},
