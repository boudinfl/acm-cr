@inproceedings{10.1145/3338286.3344397,
author = {Baldauf, Matthias and Ribler, Stefan and Fr\"{o}hlich, Peter},
title = {Alexa, I'm in Need! Investigating the Potential and Barriers of Voice Assistance Services for Social Work},
year = {2019},
isbn = {9781450368254},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3338286.3344397},
