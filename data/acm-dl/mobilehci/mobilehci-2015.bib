}

@inproceedings{10.1145/2786567.2793687,
author = {Lee, Je Seok and Liang, Shuang and Park, Sangeun and Yan, Chang},
title = {Hi Grandpa! A Communication Tool Connecting Grandparents and Grandchildren Living Apart},
year = {2015},
isbn = {9781450336536},
