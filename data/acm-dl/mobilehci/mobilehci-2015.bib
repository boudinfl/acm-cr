@inproceedings{10.1145/2786567.2794346,
author = {Fosh, Lesley},
title = {Performing Interpretations of Museum Exhibits in Groups},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2786567.2794346},
