@inproceedings{10.1145/2785830.2785850,
author = {Hasan, Khalad and Ahlstr\"{o}m, David and Irani, Pourang},
title = {SAMMI: A Spatially-Aware Multi-Mobile Interface for Analytic Map Navigation Tasks},
