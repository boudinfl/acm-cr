abstract = {The average smartphone user handles multiple app notifications a day. Apart from the potential valuable information these notifications carry, they can often be disrupting and annoying. To an extreme end, this can lead to information overload and result in technostress. On Apple's iOS, apps need to request permission to send notifications. However, this request is rather nondescript, i.e. it doesn't tell the user about the nature or frequency of notifications. In this paper we present a concept for empowering users to make informed choices on whether to accept or deny push notification requests.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {1123–1125},
numpages = {3},
keywords = {Human Factors, permission requests, notifications, smartphones, apps},
location = {Copenhagen, Denmark},
series = {MobileHCI '15}
}

@inproceedings{10.1145/2786567.2795400,
author = {Wolf, Katrin and Funk, Markus and Knierim, Pascal and L\"{o}chtefeld, Markus and Boring, Sebastian},
title = {Interactive Displays through Mobile Projection},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
