}

@inproceedings{10.1145/2786567.2793688,
author = {Alasmari, Ashwag and Zhou, Lina and Zhang, Dongsong},
title = {Improving Mobile Web Search by Clustering and Visualizing Search Engine Results},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2786567.2793688},
doi = {10.1145/2786567.2793688},
abstract = {The search engine makes vast amounts of information available to mobile users. Despite increasing use of mobile search engines, the mobile web search remains ineffective mainly due to the intensive scrolling inherent in the current presentation of search engine results (SERs) on the small screen of handheld devices. In this study, we proposed to improve the presentation of mobile SERs through clustering and visualization. Based on the cognitive load theory and information foraging theory, we proposed hypotheses about the possible effects of visualization and synchronous presentation of SERs and their clusters on user search performance. To test the hypotheses, we implemented five mobile web search prototypes, and evaluated the prototypes by conducting lab experiments.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {680–687},
numpages = {8},
keywords = {Visualization, Synchronicity, Mobile Search, Clustering},
location = {Copenhagen, Denmark},
series = {MobileHCI '15}
}

@inproceedings{10.1145/2786567.2793689,
author = {Kim, Minseok and Hong, JungKih and song, Scott},
title = {Inter-Device Communication with Interactive Sharing Service},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
