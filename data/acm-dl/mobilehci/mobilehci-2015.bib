@inproceedings{10.1145/2786567.2792900,
author = {Schulz, Christian Husodo},
title = {MultiRep: A Platform Enabling Seamless Mobile Interaction},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2786567.2792900},
doi = {10.1145/2786567.2792900},
abstract = {In this paper we present MultiRep, a platform that enables real-time synchronization spanning multiple channels and devices, i. e., desktop computer, tablets and mobile phones. In order to ensure seamless user experience independent from display properties inherent to a device or operating platform, we model the business logic of an application based on a portable finite state machine. To prove our technology, we have developed a phone account management application for the mobile and the web channel that is weaved into the MultiRep platform. During the interactivity session, the audience can experiment how our technology handles with different aspects on disrupted user interactions involving multiple devices, i. e., the reexion of user inputs on individual devices along active sessions, resuming the applications state even after a sign out and animating state transitions triggered by user inputs for visualization purposes.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {622–627},
numpages = {6},
keywords = {Interaction Design, Web Programming, Mobile Interaction, Multichannel application},
location = {Copenhagen, Denmark},
series = {MobileHCI '15}
}

@inproceedings{10.1145/2786567.2792901,
