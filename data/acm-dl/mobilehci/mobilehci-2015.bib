}

@inproceedings{10.1145/2786567.2794335,
author = {Norrie, Lauren and Murray-Smith, Roderick},
title = {Impact of Smartphone Notification Display Choice in a Typing Task},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2786567.2794335},
doi = {10.1145/2786567.2794335},
abstract = {External displays have the potential to make smartphone notifications less obtrusive when a user has committed their attention to a primary task. We compare six notification displays, and evaluate the impact that negotiating smartphone interruptions has on a typing task when the number of notifications to ignore and act on are equal. A lab experiment with 30 participants is conducted, and initial results show that desktop pop-ups are preferred significantly more, where they require the fewest actions to read. Managing notifications via the notification bar is least preferred, despite requiring fewer actions to respond. This work is a well-controlled pre-cursor to the application of notification displays in social scenarios. The results motivate the use of external displays to manage attention around smartphone interruptions.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {1094–1099},
numpages = {6},
keywords = {Typing, Smartphone, Notifications, Desktop},
location = {Copenhagen, Denmark},
series = {MobileHCI '15}
}

@inproceedings{10.1145/2786567.2794336,
author = {Pejovic, Veljko and Musolesi, Mirco and Mehrotra, Abhinav},
title = {Investigating The Role of Task Engagement in Mobile Interruptibility},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2786567.2794336},
doi = {10.1145/2786567.2794336},
abstract = {Context-awareness of mobile phones is a cornerstone of recent efforts in automatic determination of user interruptibility. Modalities such as a user's location, her physical activity, time of day, can be used in machine learning models to infer if a user is going to welcome an incoming notification or not. However, the success of context-aware interruptibility systems questions the existing theory of interruptibility, that is based on the internal state of the user, not her surroundings. In this work we examine the role of a user's internal context, defined by her engagement in the current task, on the sentiment towards an interrupting mobile notification. We collect and analyse real-world data on interruptibility of twenty subjects over two weeks, and show that the internal state indeed impacts user interruptibility.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {1100–1105},
numpages = {6},
keywords = {Notifications, Context-aware computing, Interruptibility, Multitasking},
location = {Copenhagen, Denmark},
series = {MobileHCI '15}
}

@inproceedings{10.1145/2786567.2794340,
author = {Pielot, Martin and Baltrunas, Linas and Oliver, Nuria},
title = {Boredom-Triggered Proactive Recommendations},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2786567.2794340},
doi = {10.1145/2786567.2794340},
abstract = {We propose the concept of boredom-triggered proactive recommendations for mobile phones. Given that more and more services attempt to attract mobile phone users' attention via push notifications, attention in this context can be considered as an increasingly scarce resource. However, when people are bored, by definition, they seek stimuli and hence often turn to their mobile phones. We cite evidence from our most recent work that boredom can be inferred from patterns of mobile phone usage and that during inferred phases of boredom, people are more likely to engage with suggested content. Thus, using boredom as content-independent trigger might help to make proactive recommendations a more pleasant experience and, in consequence, more successful.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {1106–1110},
numpages = {5},
keywords = {Availability, Attention Economy, Alerts, Proactive Recommendations, Notifications, Interruptibility, Boredom},
location = {Copenhagen, Denmark},
series = {MobileHCI '15}
}

@inproceedings{10.1145/2786567.2794338,
author = {Shirazi, Alireza Sahami and Henze, Niels},
title = {Assessment of Notifications on Smartwatches},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2786567.2794338},
doi = {10.1145/2786567.2794338},
abstract = {Notifications are a centerpiece of current mobile devices. With PCs, smartphones, smartwatches, smart glasses, and smart TVs the number of devices that display notifications currently increases. Users receive notifications on multiple devices at the same time which further aggravate the disruptive nature of notifications. In particular, displaying notifications is a main use case for smartwatches. While a body of work studied notifications on other devices, this paper investigates notifications on smartwatches. We conducted an online survey to assess users' expectations for notifications on different devices. We contrast the results with an in-situ study where we ask participants to rate individual notifications shown on a smartwatch. The results reveal that the importance of notifications depends not only on the type of app that creates them but also on the type of smart device that shows them. We conclude that a holistic notification service that manages the distribution of notifications is needed.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {1111–1116},
numpages = {6},
keywords = {Smartwatch, Notification, Interaction},
location = {Copenhagen, Denmark},
series = {MobileHCI '15}
}

@inproceedings{10.1145/2786567.2794334,
author = {Weber, Dominik and Shirazi, Alireza Sahami and Henze, Niels},
title = {Towards Smart Notifications Using Research in the Large},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2786567.2794334},
doi = {10.1145/2786567.2794334},
abstract = {Notifications are a core function of current smart devices. They inform users about a variety of events, such as new messages, comments on social networks posts or application updates. As such, notifications are the main mechanisms to proactively communicate with the user. Focusing on individual device types such as PCs and smartphones, previous work showed that notifications can be distractive and disruptive. The ongoing wave of smart devices makes it possible to reach the user through multiple devices at once -- amplifying the effects of notifications. What is missing is an understanding of notifications in a multi-device environment to enable the smart management of notifications across devices. In this paper we present a system that is able to share notifications across smartphones, tablets, PCs, and smart TVs. It can further reach users through connected devices such as smart watches and smart glasses. The system currently distributes 5.3 million notifications by almost 30,000 users every day. It is not only intended to provide a holistic notification mechanism but also serves us to conduct large scale user studies to gain a deeper understanding of notifications in a multi-device environment.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {1117–1122},
numpages = {6},
keywords = {Smart Notification, Smart Devices, Notification},
location = {Copenhagen, Denmark},
series = {MobileHCI '15}
}

@inproceedings{10.1145/2786567.2794333,
author = {Westermann, Tilo and Wechsung, Ina},
title = {Empowering Users to Make Informed Permission Request Choices},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
