@inproceedings{10.1145/2786567.2794342,
author = {B\"{u}ttner, Sebastian and Sand, Oliver and R\"{o}cker, Carsten},
title = {Extending the Design Space in Industrial Manufacturing Through Mobile Projection},
year = {2015},
