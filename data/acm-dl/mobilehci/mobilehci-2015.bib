@inproceedings{10.1145/2786567.2795401,
author = {Lucero, Andr\'{e}s and Wilde, Danielle and Robinson, Simon and Fischer, Joel E. and Clawson, James and Tomico, Oscar},
title = {Mobile Collocated Interactions With Wearables},
year = {2015},
isbn = {9781450336536},
