doi = {10.1145/2786567.2793686},
abstract = {In this paper, we redesigned a white cane into TalkingCane, an interactive instrument for communication between visually impaired people and the world. Our research goal is to facilitate bus usage by blind people and hence increase their ability to exercise their essential right of accessibility in their daily lives. TalkingCane can read RFID chips in braille roadblocks and send location information to the user's smartphone. In addition, boarding information is sent to the specific bus driver through Seoul city's bus information system so that the driver can assist the blind person boarding.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {668–673},
numpages = {6},
keywords = {Public transportation, Assistive technology, Blindness, Public data usage, Visually impaired people},
