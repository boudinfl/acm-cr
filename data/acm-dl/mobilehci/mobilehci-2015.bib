@inproceedings{10.1145/2786567.2794341,
author = {Vechev, Velko and \"{U}nl\"{u}er, Adviye Ay\c{c}a and Dancu, Alexandru},
title = {Medium and Transition in Mobile Projected Interfaces},
year = {2015},
isbn = {9781450336536},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2786567.2794341},
doi = {10.1145/2786567.2794341},
abstract = {Two advantages of mobile projectors as compared to other display technologies are that they can offer adjustable screen sizes and can transform a great variety surfaces in the physical environment into displays. Mediums, such as concrete, glass, water, or fog could be employed to present information. Many displays are created to suit a specific application context while a single projection enabled device could adapt to multiple environments. For example, moving from an interactive projected desktop surface to an automobile head-up-display. We suggest that the design of projected interfaces should harness key advantages of this technology and create a smooth transition between the different mediums and application contexts.},
booktitle = {Proceedings of the 17th International Conference on Human-Computer Interaction with Mobile Devices and Services Adjunct},
pages = {1134–1137},
numpages = {4},
keywords = {Interaction in motion, transition, projected displays},
