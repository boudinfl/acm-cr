author = {Yoon, Youngwoo and Ahn, Yuri and Lee, Geehyuk and Hong, Sungmoo and Kim, Minjeong},
title = {Context-Aware Photo Selection for Promoting Photo Consumption on a Mobile Phone},
year = {2008},
