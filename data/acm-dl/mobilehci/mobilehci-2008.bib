@inproceedings{10.1145/1409240.1409288,
author = {Goussevskaia, Olga and Kuhn, Michael and Wattenhofer, Roger},
title = {Exploring Music Collections on Mobile Devices},
year = {2008},
isbn = {9781595939524},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1409240.1409288},
doi = {10.1145/1409240.1409288},
abstract = {Ever larger collections of music are stored on mobile devices. The process of managing these repositories therefore becomes increasingly challenging. In this work we propose to use a map of the "world of music" as a data structure for music exploration and retrieval on mobile devices. We present Mobile Music Explorer---a mobile application, which allows users to create playlists by specifying trajectories on the map and to use similarity based search methods to navigate through their personal music collections. Our navigation methods ensure that any part of the collection can quickly be reached, even for a large set of items. Moreover, we show that the map representation is a natural approach to provide efficient and distributed operation.},
booktitle = {Proceedings of the 10th International Conference on Human Computer Interaction with Mobile Devices and Services},
pages = {359–362},
numpages = {4},
location = {Amsterdam, The Netherlands},
series = {MobileHCI '08}
}

@inproceedings{10.1145/1409240.1409289,
