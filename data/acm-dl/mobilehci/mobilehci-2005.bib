@inproceedings{10.1145/1085777.1085823,
author = {Zhong, Lin and Sinclair, Mike and Jha, Niraj K.},
title = {A Personal-Area Network of Low-Power Wireless Interfacing Devices for Handhelds: System and Hardware Design},
year = {2005},
isbn = {1595930892},
