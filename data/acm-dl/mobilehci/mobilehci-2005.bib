booktitle = {Proceedings of the 7th International Conference on Human Computer Interaction with Mobile Devices &amp; Services},
pages = {15–22},
numpages = {8},
keywords = {co-locate communication, common memories, ad hoc computing, social networking, synchronized shutters, photo sharing},
location = {Salzburg, Austria},
series = {MobileHCI '05}
}

@inproceedings{10.1145/1085777.1085782,
author = {Kjeldskov, Jesper and Paay, Jeni},
