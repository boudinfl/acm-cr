url = {https://doi.org/10.1145/3379503.3403538},
doi = {10.1145/3379503.3403538},
abstract = { We present Headbang, an interaction technique that enriches touch input on handheld devices through slight head movement gestures. This way, users can easily execute shortcuts, like Copy, Paste, or Share, to on-screen targets while touching them. Headbang utilizes the capabilities of commodity smartphones to track the user’s head with their front facing cameras. We evaluated Headbang in two studies and show that the system can be reliably used while sitting and walking and offers a similar accuracy and speed as touch interaction.},
booktitle = {22nd International Conference on Human-Computer Interaction with Mobile Devices and Services},
articleno = {17},
numpages = {10},
keywords = {pie menus, mobile devices, head gestures, head tracking},
location = {Oldenburg, Germany},
