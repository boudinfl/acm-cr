}

@article{10.1145/2719920,
author = {Karimi, Sarvnaz and Wang, Chen and Metke-Jimenez, Alejandro and Gaire, Raj and Paris, Cecile},
title = {Text and Data Mining Techniques in Adverse Drug Reaction Detection},
