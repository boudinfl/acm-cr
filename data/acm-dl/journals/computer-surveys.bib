@article{10.1145/3078833,
author = {Granatyr, Jones and Osman, Nardine and Dias, Jo\~{a}o and Nunes, Maria Augusta Silveira Netto and Masthoff, Judith and Enembreck, Fabr\'{\i}cio and Lessing, Otto Robert and Sierra, Carles and Paiva, Ana Maria and Scalabrin, Edson Em\'{\i}lio},
