month = jun,
pages = {159–217},
numpages = {59},
keywords = {spatial databases, pyramids, image space, space-filling curves, quadtrees, octrees, object space, feature query, geographic information systems (GIS), Access methods, location query, R-trees}
}

@article{10.1145/1035570.1035571,
