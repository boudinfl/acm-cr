numpages = {46},
keywords = {music annotation, music mood estimation, survey of music information retrieval, music recommendation system, query-by-humming/singing, music genre, indian classical music, segmentation of vocal and non-vocal regions, Artist identification, instrument identification, open problems in music information retrieval, music related features}
