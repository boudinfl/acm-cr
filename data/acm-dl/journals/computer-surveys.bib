@article{10.1145/3326540,
author = {Rejiba, Zeineb and Masip-Bruin, Xavier and Mar\'{\i}n-Tordera, Eva},
title = {A Survey on Mobility-Induced Service Migration in the Fog, Edge, and Related Computing Paradigms},
