@article{10.1007/s11257-016-9173-y,
author = {Lepri, Bruno and Staiano, Jacopo and Shmueli, Erez and Pianesi, Fabio and Pentland, Alex},
title = {The Role of Personality in Shaping Social Networks and Mediating Behavioral Change},
year = {2016},
