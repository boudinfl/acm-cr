keywords = {user modeling, personalization, machine learning, data mining, web usage mining}
}

@article{10.1023/A:1026201108015,
author = {Alpert, Sherman R. and Karat, John and Karat, Clare-Marie and Brodie, Carolyn and Vergo, John G.},
title = {User Attitudes Regarding a User-Adaptive ECommerce Web Site},
year = {2003},
issue_date = {November 2003},
publisher = {Kluwer Academic Publishers},
address = {USA},
volume = {13},
number = {4},
issn = {0924-1868},
url = {https://doi.org/10.1023/A:1026201108015},
doi = {10.1023/A:1026201108015},
abstract = {Despite an abundance of recommendations by researchers and more recently by commercial enterprises for adaptive interaction techniques and technologies, there exists little experimental validation of the value of such approaches to users. We have conducted user studies focussed on the perceived value of a variety of personalization features for an eCommerce Web site for computing machinery sales and support. Our study results have implications for the design of user-adaptive applications. Interesting findings include unenthusiastic user attitudes toward system attempts to infer user needs, goals, or interests and to thereby provide user-specific adaptive content. Users also expressed equivocal opinions of collaborative filtering for the specific eCommerce scenarios we studied; thus personalization features popular in one eCommerce environment may not be effective or useful for other eCommerce domains. Users expressed their strong desire to have full and explicit control of data and interaction. Lastly, users want readily to be able to make sense of site behavior, that is, to understand a site's rationale for displaying particular content.},
journal = {User Modeling and User-Adapted Interaction},
month = nov,
pages = {373–396},
numpages = {24},
keywords = {user studies, adaptive interaction, eCommerce, human-computer interaction, user profile, collaborative filtering, personalization}
}

@article{10.1023/A:1024746731130,
author = {Papanikolaou, Kyparisia A. and Grigoriadou, Maria and Kornilakis, Harry and Magoulas, George D.},
title = {Personalizing the Interaction in a Web-Based Educational Hypermedia System: The Case of INSPIRE},
year = {2003},
issue_date = {August 2003},
publisher = {Kluwer Academic Publishers},
address = {USA},
volume = {13},
number = {3},
issn = {0924-1868},
url = {https://doi.org/10.1023/A:1024746731130},
doi = {10.1023/A:1024746731130},
abstract = {In this paper we present an Adaptive Educational Hypermedia prototype, named INSPIRE. The approach employed in INSPIRE emphasizes the fact that learners perceive and process information in very different ways, and integrates ideas from theories of instructional design and learning styles. Our aim is to make a shift towards a more 'learning-focused' paradigm of instruction by providing a sequence of authentic and meaningful tasks that matches learner' preferred way of studying. INSPIRE, throughout its interaction with the learner, dynamically generates learner-tailored lessons that gradually lead to the accomplishment of learner's learning goals. It supports several levels of adaptation: from full system-control to full learner-control, and offers learners the option to decide on the level of adaptation of the system by intervening in different stages of the lesson generation process and formulating the lesson contents and presentation. Both the adaptive and adaptable behavior of INSPIRE are guided by the learner model which provides information about the learner, such as knowledge level on the domain concepts and learning style. The learner model is exploited in multiple ways: curriculum sequencing, adaptive navigation support, adaptive presentation, and supports system's adaptable behavior. An empirical study has been performed to evaluate the adaptation framework and assess learners' attitudes towards the proposed instructional design.},
journal = {User Modeling and User-Adapted Interaction},
month = aug,
pages = {213–267},
numpages = {55},
keywords = {adaptive navigation support, instructional design, adaptation, adaptive educational hypermedia systems, curriculum sequencing, distance learning, adaptability, learning styles, learner model, learner control, adaptivity, instructional strategies, adaptive presentation}
}

@article{10.1023/A:1024733008280,
author = {Bunt, Andrea and Conati, Cristina},
