month = nov,
pages = {1154–1171},
numpages = {18},
keywords = {semiotics, discourse representation, semantic annotation, coherence relations, ontologies, semantic web, argumentation}
}

@article{10.1016/j.ijhcs.2006.07.001,
author = {Konradt, Udo and Christophersen, Timo and Schaeffer-Kuelz, Ute},
title = {Predicting User Satisfaction, Strain and System Usage of Employee Self-Services},
year = {2006},
