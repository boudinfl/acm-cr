@article{10.1016/j.ijhcs.2009.05.001,
author = {Beale, Russell and Creed, Chris},
title = {Affective Interaction: How Emotional Agents Affect Users},
year = {2009},
issue_date = {September, 2009},
publisher = {Academic Press, Inc.},
address = {USA},
volume = {67},
number = {9},
issn = {1071-5819},
