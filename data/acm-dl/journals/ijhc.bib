@article{10.1016/j.ijhcs.2009.02.005,
author = {van Vugt, H. C. and Konijn, E. A. and Hoorn, J. F. and Veldhuis, J.},
title = {When Too Heavy is Just Fine: Creating Trustworthy e-Health Advisors},
year = {2009},
issue_date = {July, 2009},
publisher = {Academic Press, Inc.},
address = {USA},
volume = {67},
number = {7},
issn = {1071-5819},
url = {https://doi.org/10.1016/j.ijhcs.2009.02.005},
doi = {10.1016/j.ijhcs.2009.02.005},
abstract = {In using weight and diet advisors, people compare embodied agents with their actual selves and with the person they want to be: someone with an ideal weight; their ideal selves. In a laboratory and an online experiment, we scrutinized the effects of similarity with and idealness of an embodied agent feature on user involvement with, distance towards, and intentions to use the e-health advisor. The advisor's body size was either similar or dissimilar to the user's actual body size, and had an, according to the user, ideal (slender) or non-ideal (heavier) shape. Results indicated that the factor perceived idealness was more important than similarity for explaining involvement with, distance towards, and intentions to use the embodied agent, but in an unexpected way. Users regarded the heavier, non-ideal, e-health advisors as more trustworthy, which explained the larger part of the variance in the level of involvement, distance, and intentions to use a health advisor. Sometimes, it seems better to forget the stereotypical preference and design embodied agents that are not ideal.},
