@article{10.1016/j.ijhcs.2011.11.006,
author = {Huang, Ying Ying and Moll, Jonas and Salln\"{a}s, Eva-Lotta and Sundblad, Yngve},
title = {Auditory Feedback in Haptic Collaborative Interfaces},
year = {2012},
issue_date = {April, 2012},
