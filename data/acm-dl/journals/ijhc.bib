@article{10.1016/j.ijhcs.2009.03.006,
author = {Zhao, Zhengxuan and Rau, Pei-Luen Patrick and Zhang, Ting and Salvendy, Gavriel},
title = {Visual Search-Based Design and Evaluation of Screen Magnifiers for Older and Visually Impaired Users},
year = {2009},
issue_date = {August, 2009},
publisher = {Academic Press, Inc.},
address = {USA},
volume = {67},
