@article{10.1016/j.ijhcs.2013.09.010,
author = {Kim, Sung-Hee and Phang, Daniel and An, Tuyin and Yi, Ji Soo and Kenney, Rachael and Uhan, Nelson A.},
title = {POETIC: Interactive Solutions to Alleviate the Reversal Error in Student-Professor Type Problems},
year = {2014},
issue_date = {January, 2014},
publisher = {Academic Press, Inc.},
address = {USA},
volume = {72},
number = {1},
issn = {1071-5819},
