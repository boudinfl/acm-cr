@article{10.1016/j.ijhcs.2017.03.004,
author = {Oh, Jeungmin and Kim, Joohyun and Kim, Myungjoon and Choi, Woohyeok and Lee, SangJeong and Lee, Uichin},
title = {Understanding Mobile Document Capture and Correcting Orientation Errors},
