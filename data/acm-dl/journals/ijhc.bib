month = dec,
pages = {857–875},
numpages = {19},
keywords = {Text input, Finger input, Letter orientation, Back-of-device, Shape orientation, Throughput, Touchpad, PDA, Text entry, Fitts' law, Thumb input, Mobile device, Touch screen, Pocket PC, EdgeWrite, Mobile phone, Handheld device, Front-of-device}
}

@article{10.1016/j.ijhcs.2008.03.003,
author = {Brewer, Johanna and Dourish, Paul},
