@article{10.1016/j.ijhcs.2014.04.003,
author = {Wadley, Greg and Vetere, Frank and Hopkins, Liza and Green, Julie and Kulik, Lars},
title = {Exploring Ambient Technology for Connecting Hospitalised Children with School and Home},
year = {2014},
