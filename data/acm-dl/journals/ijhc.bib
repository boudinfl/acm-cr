@article{10.1016/j.ijhcs.2006.03.003,
author = {Weir, Catherine S. and Anderson, James N. and Jack, Mervyn A.},
title = {On the Role of Metaphor and Language in Design of Third Party Payments in EBanking: Usability and Quality},
