month = sep,
pages = {716–754},
numpages = {39},
keywords = {Ontologies, Wikipedia mining, Information retrieval, Text mining, NLP, Wikipedia, Information extraction, Semantic web}
}

@article{10.1016/j.ijhcs.2009.05.003,
author = {S\"{a}rkel\"{a}, Heikki and Takatalo, Jari and May, Patrick and Laakso, Mikko and Nyman, G\"{o}te},
title = {The Movement Patterns and the Experiential Components of Virtual Environments},
