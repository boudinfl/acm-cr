@article{10.1016/j.ijhcs.2011.01.001,
author = {Asimakopoulos, Stavros and Dix, Alan and Fildes, Robert},
title = {Using Hierarchical Task Decomposition as a Grammar to Map Actions in Context: Application to Forecasting Systems in Supply Chain Planning},
