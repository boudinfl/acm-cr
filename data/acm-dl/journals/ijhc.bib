@article{10.1006/ijhc.1997.0143,
author = {AXTELL, C.M. and WATERSON, P.E. and CLEGG, C.W.},
title = {Problems Integrating User Participation into Software Development},
year = {1997},
issue_date = {Aug. 1997},
publisher = {Academic Press, Inc.},
