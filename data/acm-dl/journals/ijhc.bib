@article{10.1016/j.ijhcs.2010.12.010,
author = {Lindley, Si\'{\i}n E. and Glancy, Maxine and Harper, Richard and Randall, Dave and Smyth, Nicola},
title = {"Oh and How Things Just Don't Change, the More Things Stay the Same": Reflections on SenseCam Images 18 Months after Capture},
