@article{10.1016/j.ijhcs.2008.04.002,
author = {Lindley, Si\'{\i}n E. and Monk, Andrew F.},
title = {Social Enjoyment with Electronic Photograph Displays: Awareness and Control},
year = {2008},
issue_date = {August, 2008},
publisher = {Academic Press, Inc.},
address = {USA},
volume = {66},
number = {8},
issn = {1071-5819},
url = {https://doi.org/10.1016/j.ijhcs.2008.04.002},
doi = {10.1016/j.ijhcs.2008.04.002},
abstract = {Two experiments are reported in which groups of three friends socialised around their own photographs. The photographs were of two types, depicting events where all three had been present, permitting reminiscing, and events where only the photographer had been present, permitting storytelling. In Experiment 1 the seating arrangement was manipulated so that the two audience members sat either behind or around the photographer. It was hypothesised that the former would lower levels of peripheral awareness within the groups, resulting in a more formal conversation and a poorer recreational experience. In Experiment 2, control over the photographs was manipulated so that either all three group members had access to a remote control (distributed control), or only the photographer did (single control). It was hypothesised that distributed control would result in less formal conversations and a better recreational experience. In both experiments, the hypotheses were supported: patterns of social interaction were significantly affected by the manipulation of awareness during storytelling, and by the manipulation of control during reminiscing. Additionally, the two manipulations were found to affect ratings of enjoyment and fun, respectively. The results are interpreted in terms of a causative model of unfolding and recounted experience.},
journal = {Int. J. Hum.-Comput. Stud.},
month = aug,
pages = {587–604},
numpages = {18},
keywords = {Photo talk, Experiment, Affordance}
}

@article{10.1016/j.ijhcs.2008.04.001,
author = {Grynszpan, Ouriel and Martin, Jean-Claude and Nadel, Jacqueline},
title = {Multimedia Interfaces for Users with High Functioning Autism: An Empirical Investigation},
year = {2008},
issue_date = {August, 2008},
publisher = {Academic Press, Inc.},
address = {USA},
