@article{10.1016/j.ijhcs.2006.04.001,
author = {Liao, Wenhui and Zhang, Weihong and Zhu, Zhiwei and Ji, Qiang and Gray, Wayne D.},
title = {Toward a Decision-Theoretic Framework for Affect Recognition and User Assistance},
