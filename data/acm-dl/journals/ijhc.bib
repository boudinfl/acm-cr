@article{10.1016/j.ijhcs.2012.10.017,
author = {Castilla, Diana and Garcia-Palacios, Azucena and Bret\'{o}N-L\'{o}Pez, Juana and Miralles, Ignacio and Ba\~{n}Os, Rosa Mar\'{\i}A and Etchemendy, Ernestina and Farfallini, Luis and Botella, Cristina},
