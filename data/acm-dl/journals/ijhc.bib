@article{10.1016/j.ijhcs.2011.04.004,
author = {Makri, Stephann and Blandford, Ann and Cox, Anna L. and Attfield, Simon and Warwick, Claire},
title = {Evaluating the Information Behaviour Methods: Formative Evaluations of Two Methods for Assessing the Functionality and Usability of Electronic Information Resources},
year = {2011},
issue_date = {July, 2011},
publisher = {Academic Press, Inc.},
