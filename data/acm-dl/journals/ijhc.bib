@article{10.1006/ijhc.2000.0384,
author = {MOTTA, ENRICO and BUCKINGHAM SHUM, SIMON and DOMINGUE, JOHN},
title = {Ontology-Driven Document Enrichment},
year = {2000},
issue_date = {June 2000},
publisher = {Academic Press, Inc.},
