@article{10.1006/ijhc.1997.0153,
author = {DILLON, THOMAS W. and NORCIO, A.F.},
title = {User Performance and Acceptance of a Speech-Input Interface in a Health Assessment Task},
year = {1997},
issue_date = {Oct. 1997},
publisher = {Academic Press, Inc.},
address = {USA},
volume = {47},
number = {4},
issn = {1071-5819},
url = {https://doi.org/10.1006/ijhc.1997.0153},
doi = {10.1006/ijhc.1997.0153},
abstract = {Novice and expert nurses performed a hands-busy and eyes-busy task using a continuous speech-input interface. This study examined their performance and acceptance of the interface. Three factors were found to improve the user's performance: expertise in the domain, experience with the interface and the use of a small vocabulary. Experience with the interface corresponded with a higher degree of acceptance. Available vocabulary size and level of expertise did not affect acceptance.},
