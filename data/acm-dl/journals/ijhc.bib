@article{10.1016/j.ijhcs.2014.12.005,
author = {Santana, Vagner Figueredo de and Baranauskas, Maria Cec\'{\i}lia Calani},
title = {WELFIT},
year = {2015},
issue_date = {April 2015},
publisher = {Academic Press, Inc.},
