@article{10.1016/j.ijhcs.2006.08.011,
author = {Tzeng, Jeng-Yi},
title = {Matching Users' Diverse Social Scripts with Resonating Humanized Features to Create a Polite Interface},
year = {2006},
issue_date = {December, 2006},
publisher = {Academic Press, Inc.},
address = {USA},
volume = {64},
