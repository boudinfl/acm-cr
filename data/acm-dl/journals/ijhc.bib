keywords = {Community, Science, Human-computer interaction, Paradigm, Design, Attitude About Reality, Engineering}
}

@article{10.1016/j.ijhcs.2007.02.003,
author = {Kapoor, Ashish and Burleson, Winslow and Picard, Rosalind W.},
