@article{10.1016/j.ijhcs.2011.11.005,
author = {Chittaro, Luca and Sioni, Riccardo},
title = {An Electromyographic Study of a Laser Pointer-Style Device vs. Mouse and Keyboard in an Object Arrangement Task on a Large Screen},
year = {2012},
