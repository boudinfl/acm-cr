@article{10.1016/j.ijhcs.2009.10.001,
author = {Lee, Ghang and Eastman, Charles M. and Taunk, Tarang and Ho, Chun-Heng},
title = {Usability Principles and Best Practices for the User Interface Design of Complex 3D Architectural Design and Engineering Tools},
