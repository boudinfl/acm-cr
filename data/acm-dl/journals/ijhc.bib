month = jun,
pages = {4–13},
numpages = {10},
keywords = {Mobile crowdsourcing, Incentives, Flickr}
}

@article{10.1016/j.ijhcs.2016.09.002,
author = {Guo, Bin and Chen, Huihui and Yu, Zhiwen and Nan, Wenqian and Xie, Xing and Zhang, Daqing and Zhou, Xingshe},
title = {TaskMe},
year = {2017},
issue_date = {June 2017},
publisher = {Academic Press, Inc.},
