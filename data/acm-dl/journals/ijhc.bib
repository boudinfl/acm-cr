month = aug,
pages = {663–675},
numpages = {13},
keywords = {Screen magnifier, Background color, Output mode, Magnification mode}
}

@article{10.1016/j.ijhcs.2009.03.005,
author = {Chanel, Guillaume and Kierkels, Joep J. M. and Soleymani, Mohammad and Pun, Thierry},
