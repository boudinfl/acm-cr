@article{10.1016/j.ijhcs.2012.01.004,
author = {D'Mello, Sidney and Olney, Andrew and Williams, Claire and Hays, Patrick},
title = {Gaze Tutor: A Gaze-Reactive Intelligent Tutoring System},
