@article{10.1016/j.ijhcs.2009.02.003,
author = {Howarth, Jonathan and Smith-Jackson, Tonya and Hartson, Rex},
title = {Supporting Novice Usability Practitioners with Usability Engineering Tools},
year = {2009},
issue_date = {June, 2009},
publisher = {Academic Press, Inc.},
address = {USA},
