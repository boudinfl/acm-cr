@article{10.1016/j.ijhcs.2014.12.008,
author = {Jorritsma, Wiard and Cnossen, Fokie and van Ooijen, Peter M.A.},
title = {Adaptive Support for User Interface Customization},
year = {2015},
issue_date = {May 2015},
publisher = {Academic Press, Inc.},
