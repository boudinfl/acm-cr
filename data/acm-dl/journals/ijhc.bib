month = oct,
pages = {439–492},
numpages = {54},
keywords = {Database interface, Message understanding., Concept-based query languages, Information extraction, Natural language query, Natural language generation, Semantic grammar, Natural language processing, Conceptual query language, Intelligent query tool}
}

