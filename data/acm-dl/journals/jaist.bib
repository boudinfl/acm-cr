@article{10.1002/asi.23983,
author = {Robert, Lionel P. and You, Sangseok},
title = {Are You Satisfied yet? Shared Leadership, Individual Trust, Autonomy, and Satisfaction in Virtual Teams},
year = {2018},
issue_date = {April 2018},
publisher = {John Wiley &amp; Sons, Inc.},
address = {USA},
volume = {69},
