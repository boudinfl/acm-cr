month = nov,
pages = {2755–2770},
numpages = {16}
}

@article{10.1002/asi.23903,
author = {Desrochers, Nadine and Paul‐Hus, Ad\`{e}le and Pecoskie, Jen},
title = {Five Decades of Gratitude: A Meta‐Synthesis of Acknowledgments Research},
year = {2017},
issue_date = {December 2017},
