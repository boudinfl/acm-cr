@article{10.1002/asi.23460,
author = {Stover, Justin Anthony and Winter, Yaron and Koppel, Moshe and Kestemont, Mike},
title = {Computational Authorship Verification Method Attributes a New Work to a Major 2nd Century African Author},
year = {2016},
