}

@article{10.1002/asi.23358,
author = {Candela, Leonardo and Castelli, Donatella and Manghi, Paolo and Tani, Alice},
title = {Data Journals: A Survey},
year = {2015},
issue_date = {September 2015},
publisher = {John Wiley &amp; Sons, Inc.},
address = {USA},
volume = {66},
number = {9},
