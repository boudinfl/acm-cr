@article{10.1002/asi.24076,
author = {Arazy, Ofer and Lifshitz‐Assaf, Hila and Balila, Adam},
title = {Neither a Bazaar nor a Cathedral: The Interplay between Structure and Agency in Wikipedia's Role System},
year = {2018},
