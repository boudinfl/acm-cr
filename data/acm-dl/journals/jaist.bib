@article{10.1002/asi.23247,
author = {Miah, Md. Waliur Rahman and Yearwood, John and Kulkarni, Siddhivinayak},
title = {Constructing an Inter-Post Similarity Measure to Differentiate the Psychological Stages in Offensive Chats},
year = {2015},
issue_date = {May 2015},
