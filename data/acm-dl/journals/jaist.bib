@article{10.1002/asi.23360,
author = {Mutz, R\"{u}diger and Daniel, Hans-Dieter},
title = {What is behind the Curtain of the Leiden Ranking?},
year = {2015},
issue_date = {September 2015},
publisher = {John Wiley &amp; Sons, Inc.},
