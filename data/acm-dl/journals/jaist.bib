@article{10.1002/asi.23239,
author = {Shema, Hadas and Bar-Ilan, Judit and Thelwall, Mike},
title = {How is Research Blogged? A Content Analysis Approach},
year = {2015},
issue_date = {June 2015},
publisher = {John Wiley &amp; Sons, Inc.},
address = {USA},
volume = {66},
number = {6},
