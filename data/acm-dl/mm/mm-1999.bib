@inproceedings{10.1145/319463.319484,
author = {Yang, Jie and Zhu, Xiaojin and Gross, Ralph and Kominek, John and Pan, Yue and Waibel, Alex},
title = {Multimodal People ID for a Multimedia Meeting Browser},
year = {1999},
isbn = {1581131518},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/319463.319484},
