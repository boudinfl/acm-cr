@inproceedings{10.1145/1012807.1012829,
author = {Gibson, David},
title = {The Site Browser: Catalyzing Improvements in Hypertext Organization},
year = {2004},
isbn = {1581138482},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1012807.1012829},
