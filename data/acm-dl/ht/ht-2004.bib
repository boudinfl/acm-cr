booktitle = {Proceedings of the Fifteenth ACM Conference on Hypertext and Hypermedia},
pages = {58–67},
numpages = {10},
keywords = {context-aware trellis (caT), display-agnostic hypermedia, multi-device integrated dynamic activity spaces (MIDAS)},
