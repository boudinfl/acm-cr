@inproceedings{10.1145/3295750.3298919,
author = {Russell-Rose, Tony and Chamberlain, Jon and Shokraneh, Farhad},
title = {A Visual Approach to Query Formulation for Systematic Search},
year = {2019},
isbn = {9781450360258},
publisher = {Association for Computing Machinery},
