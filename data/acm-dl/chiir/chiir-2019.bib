abstract = {In this perspectives paper, I discuss meaning-making as an information seeking and interaction enterprise. I present meaning-making as a vital human reaction to significant life changes and present indicative evidence of how people go about gathering information for making meaning within their lives. I discuss some of the various forms of information that can be used for meaning-making, why it is an information seeking task that is different to those we are used to in information seeking research, and motivate meaning-making as a new focus for information seeking and information interactions research.},
booktitle = {Proceedings of the 2019 Conference on Human Information Interaction and Retrieval},
pages = {163–171},
numpages = {9},
keywords = {information use, search, information interaction, meaning-making},
