@inproceedings{10.1145/3343413.3377949,
author = {Choi, Bogeum},
title = {The Role of Working Memory in the Search-Sensemaking Process: An Exploratory Study},
year = {2020},
isbn = {9781450368926},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3343413.3377949},
doi = {10.1145/3343413.3377949},
abstract = {The goal of this study is to advance our understanding of the cognitive mechanisms underlying search-sensemaking by examining the process through the lens of working memory (WM). I aim to extend the existing literature on search and sensemaking by incorporating the role of WM in the process. While WM plays a critical role in complex cognitive tasks, little is known about how it manifests in users' search-sensemaking while they are working with information in a complex information space such as the Web. A mixed-method design will be adopted, consisting of an experimental study and interviews. Adults with different levels of working memory capacity (WMC) will perform a learning assignment task in a lab. The combined data of screen activities and think-aloud comments will be analyzed to investigate the differential patterns in search-sensemaking between high- and low-WMC individuals (RQ1). An evolving working document will be considered an external representation of their knowledge structure and be analyzed to investigate the differential patterns in conceptual changes between high- and low-WMC individuals (RQ2). Finally, a post-session interview will be conducted to identify a range of cognitive strategies used during the task (RQ3). The proposed study will build upon the cognitive process model of sensemaking and the literature on executive functions and WM. The study will help us better understand the cognitive process of search-sensemaking from the perspective of WM. The findings can also inform design decisions for systems that can facilitate search-sensemaking while supporting users with varying levels of WMC.},
booktitle = {Proceedings of the 2020 Conference on Human Information Interaction and Retrieval},
pages = {515–518},
numpages = {4},
keywords = {search, sensemaking, cognitive model, working memory, qualitative user study},
location = {Vancouver BC, Canada},
series = {CHIIR '20}
}

@inproceedings{10.1145/3343413.3377950,
