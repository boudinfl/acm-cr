@inproceedings{10.1145/3343413.3378019,
author = {Sitbon, Laurianne and Brereton, Margot},
title = {Co-Design to Include Users with Intellectual Disability in Information Interaction Research},
year = {2020},
isbn = {9781450368926},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3343413.3378019},
