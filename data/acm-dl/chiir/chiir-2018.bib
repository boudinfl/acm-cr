@inproceedings{10.1145/3176349.3176888,
author = {Verma, Manisha and Yilmaz, Emine and Craswell, Nick},
title = {Study of Relevance and Effort across Devices},
year = {2018},
isbn = {9781450349253},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3176349.3176888},
doi = {10.1145/3176349.3176888},
abstract = {Relevance judgments are essential for designing information retrieval systems. Traditionally, judgments have been gathered via desktop interfaces. However, with the rise in popularity of smaller devices for information access, it has become imperative to investigate whether desktop based judgments are different from mobile judgments. Recently, user effort and document usefulness have also emerged as important dimensions to optimize and evaluate information retrieval systems. Since existing work is limited to desktops, it remains to be seen how these judgments are affected by user»s search device. In this paper, we address these shortcomings by collecting and analyzing relevance, usefulness and effort judgments on mobiles and desktops. Analysis of these judgments shows high agreement rate between desktop and mobile judges for relevance, followed by usefulness and findability. We also found that desktop judges are likely to spend more time and examine non-relevant/not-useful/difficult documents in greater depth compared to mobile judges. Based on our findings, we suggest that relevance judgments should be gathered via desktops and effort judgments should be collected on each device independently.},
booktitle = {Proceedings of the 2018 Conference on Human Information Interaction &amp; Retrieval},
pages = {309–312},
numpages = {4},
keywords = {relevance judgments, mobile, effort, desktop},
location = {New Brunswick, NJ, USA},
series = {CHIIR '18}
}

@inproceedings{10.1145/3176349.3176885,
author = {Volokhin, Sergey and Agichtein, Eugene},
title = {Understanding Music Listening Intents During Daily Activities with Implications for Contextual Music Recommendation},
year = {2018},
isbn = {9781450349253},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3176349.3176885},
doi = {10.1145/3176349.3176885},
abstract = {Why do we listen to music? This question has as many answers as there are people, which may vary by time of day, and the activity of the listener. We envision a contextual music search and recommendation system, which could suggest appropriate music to the user in the current context. As an important step in this direction, we set out to understand what are the users» intents for listening to music, and how they relate to common daily activities. To accomplish this, we conduct and analyze a survey of why and when people of different ages and in different countries listen to music. The resulting categories of common musical intents, and the associations of intents and activities, could be helpful for guiding the development and evaluation of contextual music recommendation systems.},
booktitle = {Proceedings of the 2018 Conference on Human Information Interaction &amp; Retrieval},
pages = {313–316},
numpages = {4},
keywords = {contextual music recommendation, music listening intent},
