@inproceedings{10.1145/3176349.3176872,
author = {Ong, Kevin and J\"{a}rvelin, Kalervo and Sanderson, Mark and Scholer, Falk},
title = {QWERTY: The Effects of Typing on Web Search Behavior},
year = {2018},
isbn = {9781450349253},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3176349.3176872},
