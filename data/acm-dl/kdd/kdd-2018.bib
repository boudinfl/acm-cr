@inproceedings{10.1145/3219819.3220097,
author = {Sanei-Mehri, Seyed-Vahid and Sariyuce, Ahmet Erdem and Tirthapura, Srikanta},
title = {Butterfly Counting in Bipartite Networks},
year = {2018},
isbn = {9781450355520},
