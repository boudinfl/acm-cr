@inproceedings{10.1145/3219819.3219831,
author = {Li, Jia and Rong, Yu and Meng, Helen and Lu, Zhihui and Kwok, Timothy and Cheng, Hong},
title = {TATC: Predicting Alzheimer's Disease with Actigraphy Data},
