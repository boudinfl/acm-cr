}

@inproceedings{10.5555/519452.830796,
author = {Choren, Ricardo and Laufer, Carlos and Blois, Marcelo and Torres, Viviane and Ferraz, Fabio and Robichez, Gustavo and Daflon, Leandro and de Lucena, Carlos J. P. and Fuks, Hugo},
title = {Using AulaNet for Web-Based Course Development},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {A variety of technologies is being used to replace or supplement the face-to-face learning process, including the World Wide Web. In this paper we present AulaNet, an environment for creating, updating and attending Web-based courses. Here we illustrate some dynamics of three experiments of course development and delivery with AulaNet, pointing out their features. We discuss how easy and how difficult it is to orchestrate technology for educational purposes.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {322},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830797,
author = {Portugal, Roberto C. and Guerrero, Luis A. and Fuller, David A.},
title = {A Customizable Collaborative Virtual Environment on the Web},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {Collaborative Virtual Environments (CVE) support the collaboration, communication and social interaction among users in virtual spaces. In this paper we present a customizable CVE implemented on top of the Web that allows for the creation of various interactive environments. This CVE is designed mainly from the perspective of the desk, rooms and hall metaphors. The architecture of our CVE is based on design patterns and integrates a group of tools in order to support interaction among users in both synchronous and asynchronous ways.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {328},
keywords = {Web applications, Collaborative Virtual Environments, Groupware},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830811,
author = {Miranda, Hugo and Rodrigues, Luis},
title = {Flexible Communication Support for CSCW Applications},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {Modern computer-supported cooperative work applications (CSCW) supporting same-time/different-place interaction are required to open several communication channels. Each of these channels has its own Quality of Service (QoS) and is implemented by a specific protocol stack. Typically, these channels need to be synchronized but inter-stack dependencies are hard to express with current communication architectures. The paper proposes a novel approach to the development of communication software supporting a style of micro-protocol composition that satisfies the requirements imposed by CSCW applications.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {338},
keywords = {quality-of-service, protocol composition, Distribution support, communication protocols},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830809,
author = {Mendes de Araujo, Renata and Borges, Marcos Roberto da Silva},
title = {The Role of Awareness Support in Collaborative Improvement of Software Processes},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {This paper discusses the possibilities for collaboration support in helping organizations to lessen social barriers to process improvement and to establish a process culture among developers. The paper explores this idea by proposing a collaborative environment that aims to promote software process improvement initiatives. The environment is focused on the role of awareness support, since we believe it to be a primary resource for software process improvements to achieve higher levels of group/collaboration and process consciousness.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {343},
keywords = {awareness, cscw, workflow, software process improvement},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830808,
author = {Bodendorf, Freimut and Grebner, Robert},
title = {Actor-Oriented Management of Cooperative Work},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {The comprehensive management of cooperative work and/or groupwork comprises the domains work task, workgroup, workflow, work aid and work object. These domains define five interdependent management areas with specific tasks. In this paper the term work management is introduced and a model for work management based on an actor paradigm is presented. The prototype implementation METAWORK supports three of the five work management domains mentioned above.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {348},
keywords = {groupwork, software agent, cooperative work, actor},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830807,
author = {Kovalainen, Mikko and Robinson, Mike},
title = {Experiences of Different Methods in the Research and Design of an "Organizational Memory" for Process Control},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {Dilemmas between practical longitudinal research and various design methodologies are discussed as they arose over 5 years in the context of developing a knowledge sharing tool (electronic diary) in industrial Process Control. Design methodology is often presented as a unitary framework, present from the start, and guiding choices, approaches to, and progress through subject matter. In practice, we found this was not the case. Different methodologies were appropriate for different phases of the project, and different shifts in the subject matter. The best fit to our work was Harper's guidelines for design-oriented ethnography. But even this missed two major facets of the work: a friend in the organization and the importance of prototyping. We conclude that there was no one methodology that could have been chosen at the outset, nor even with hindsight, (retro)fitted at the end to all the needs of the project. We do not argue for eclecticism in choices of methodology. Rather we believe it is research approach that provides the overall theme, guide, and consistency.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {353},
series = {SPIRE '99}
}

