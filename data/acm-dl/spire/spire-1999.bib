@inproceedings{10.5555/519452.830766,
author = {Lopresti, Daniel and Wilfong, Gordon},
title = {Cross-Domain Approximate String Matching},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {Approximate string matching is an important paradigm in domains ranging from speech recognition to information retrieval and molecular biology. In this paper, we introduce a new formalism for a class of applications that takes two strings as input, each specified in terms of a particular domain, and performs a comparison motivated by constraints derived from a third, possibly different domain. This issue arises, for example, when searching multimedia databases built using imperfect recognition technologies (e.g., speech, optical character, and handwriting recognition). We present a polynomial time algorithm for solving the problem, and describe several variations that can also be solved efficiently.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {120},
keywords = {optical character recognition, speech recognition, edit distance, information retrieval, approximate string matching, computational molecular biology},
series = {SPIRE '99}
}

