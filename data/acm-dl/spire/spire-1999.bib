@inproceedings{10.5555/519452.830783,
author = {Vegas, Jes\'{u}s and Fuente, Pablo de la and Baeza-Yates, Ricardo},
title = {The EC Query Language Applied to Old Manuscripts},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {In this work we show the possibilities of the EC query language in a very structured environment as a catalog of old manuscripts. The EC language can deal with simple queries and with more complex ones, as approximate searches. We have done two classes of experiments. The first one shows that the structure does not change the behavior of the system with regard to the frequency of the words. The second kind of experiments tends to show the behavior of the database when we use different structure elements in the queries.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {206},
keywords = {Information Retrieval, Structured Text, Document Databases, Query Language},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830781,
author = {Ouri, Ana Lelescu and Xu, Wolfson Bo},
title = {Approximate Retrieval from Multimedia Databases Using Relevance Feedback},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {In this paper we address the problem of retrieving stored multimedia presentations using relevance feedback. We model multimedia presentations using a crisp relational or object-oriented database, augmented with a text attribute. We also introduce a language for retrieval by content from such databases. The language is based on fuzzy logic. We also introduce a method for query refinement that uses relevance feedback provided by the user.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {215},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830769,
author = {Zobel, Justin and Williams, Hugh E.},
title = {Compact In-Memory Models for Compression of Large Text Databases},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {For compression of text databases, semi-static word-based models are a pragmatic choice. Previous experiments have shown that, where there is not sufficient memory to store a full word-based model, encoding rare words as sequences of characters can still allow good compression, while a pure character-based model is poor. We propose a further kind of model that reduces main memory costs: approximate models, in which rare words are represented by similarly-spelt common words and a sequence of edits. We investigate the compression available with different models, including characters, words, word pairs, and edits, and with combinations of these approaches. We show experimentally that carefully chosen combinations of models can improve the compression available in limited memory and greatly reduce overall memory requirements.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {224},
keywords = {Text database compression, Models for compression, Scaleability and resources, Prefix coding, Efficient text retrieval},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830812,
author = {Eden, Colin and Ackermann, Fran},
title = {The Role of GDSS in Scenario Development and Strategy Making},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {The development of alternative futures/scenarios, is an important part of strategy making. Indeed 'scenario planning' has recently become a popular activity in its own right. However, methods for involving directly the power brokers in the process are not well developed, and yet the ownership of the strategic thinking which follows from thinking about alternative futures is crucial for successful strategic change. This paper presents a method for involving the senior management team that succeeds because of its involvement of a Group Decision Support System (GDSS). The method described has been used in a wide variety of organizations - public and private, large and small. After describing the role of thinking about alternative futures in strategy making and its relationship to stakeholder analysis and management, the paper goes on to describe the method and use of the GDSS, and finally consider some of the reasons why the use of a GDSS is helpful.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {234},
keywords = {Strategy Making, Group Decision Support Systems},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830813,
author = {Ho, Tania and Antunes, Pedro},
title = {Developing a Tool to Assist Electronic Facilitation of Decision-Making Groups},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {One resource playing a critical role in electronically supported decision-making groups is the facilitator. Facilitation is a complex task, encompassing social abilities, pre-meeting planning of decision-making processes and supervising the technology usage during meetings. We found two problems with previous support to electronic facilitation: (1) limited support to planning activities; and (2) limited support to remote facilitation. The Facilitation Tool was developed to address these two issues. The tool was built around a comprehensive decision-making model, contributing with generic knowledge to planning activities. The Facilitation Tool also provides a set of techniques allowing facilitators to steer and focus group participants, analyse and understand issues, and moderate conflicting or chaotic situations.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {243},
keywords = {Electronic Facilitation, Group Decision Support Systems},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830806,
author = {Osuna, Cesar A. and Dimitriadis, Yannis A.},
title = {A Framework for the Development of Educational-Collaborative Applications Based on Social Constructivism},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {In this paper we present a new telematic-educational framework for the development of educational applications for co-operative work. It has three layers: the first one is called the co-operative layer and it describes a work group environment; the second one is called the constructivist layer and it deals with telematic support for the constructivist and co-operative principles of learning; and the third one is called the situation layer and includes a series of metaphor-based individual and co-operative activities for the teaching-learning process. We also present a description of three telematic educational applications based on the framework. These applications are currently being used in real class environment and are allowing us to validate both the design and the usefulness of the framework},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {254},
keywords = {development methodology, layer-based framework, CSCL, constructivism},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830805,
author = {Borges, Marcos Roberto da Silva and Pino, Jose A.},
title = {PAWS: Towards a Participatory Approach to Business Process Reengineering},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {Companies normally hire external consultants to carry out their Business Process Re-engineering. While this can be simple and efficient in the short term, it may not be convenient in the mid and long terms. A low level of workers' involvement with a consequent resistance to changes, and a continuous dependency on external consultancy are the main drawbacks. We propose an alternative approach to BPR in which company workers play an active and important role re-designing the organization's processes in a cooperative style. The method includes stepwise refinement and is expected to generate better results than the traditional approach.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {262},
keywords = {BPR methods, business process reengineering, workflow},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830799,
author = {Guerrero, Luis A. and Fuller, David A.},
title = {Design Patterns for Collaborative Systems},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {Collaborative applications provide a group of users with the facility to communicate and share data in a coordinate way. In this paper we propose a pattern system to design the basic aspects of data sharing, communication, and coordination for collaborative applications. These patterns are useful for the design and development of collaborative applications as well as for the development of platforms for the construction of collaborative applications.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {270},
keywords = {collaborative systems development and design, Design patterns},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830800,
author = {Dias, M\'{a}rcio de Sousa and Borges, Marcos R. S.},
title = {Development of Groupware Systems with the COPSE Infrastructure},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {For a long time now, infrastructure technologies for the development of groupware applications have been proposed. However, the task of developing groupware is still complex, since it involves not only technical, but also social issues. As a consequence, current technologies represent limited solutions for supporting important aspects of cooperative work.Focused on what we consider essential issues in the development of groupware, we propose an infrastructure to support this development. This infrastructure was developed in the context of the COPSE project, aiming the development of a Collaborative Project Support Environment.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {278},
keywords = {CSCW, software environment, infrastructure for groupware},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830801,
author = {Decouchant, Dominique and Gonzalez, Esther Martinez and Enriquez, Ana Maria Martinez},
title = {AllianceWeb: Cooperative Authoring on the WWW},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {Currently, few applications provide support for collaborative work on the Web. This paper presents the way by which cooperative authoring can be easily and efficiently performed between authors distributed on the Web. The main goal is to provide support for allowing them to create common Web documents in a secure and consistent way. We present the AllianceWeb project whose goal is to extend the Web environment to support cooperative authoring of documents. It provides several features such as user identification, document and resource naming, document sharing and management, document replication and consistency, storage management. Our approach unifies both the hybrid and the fully distributed architectures for document storage and access. Although the architectures seem antagonistic, they are integrated within our system to allow distributed and temporarily disconnected cooperative authoring of Web documents. Our project builds on our previous experience on the design and implementation of Alliance, a cooperative editor of structured documents on the Internet.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {286},
keywords = {resource naming, fragmented Web documents, WWW, HTTP server extensions, document environments, distributed and cooperative co-authoring},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830798,
author = {Garc\'{\i}a, Octavio and Favela, Jes\'{u}s and Machorro, Roberto},
title = {Emotional Awareness in Collaborative Systems},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {Emotions play an important role in human interaction. Both, our own emotional state and our perception of that of others with which we collaborate influence the outcome of cooperative work. With the growing interest in providing computational support for the recognition and representation of emotions, there is a clear interest in adding such facilities to groupware systems and to evaluate the positive and negative effects of using this additional channel of communication. In this paper we discuss the issues involved in supporting a new type of collaborative awareness in groupware, namely, emotional awareness. We also present two emotion-based sample applications, and discussion to further motivate work in this area within the collaborative community.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {296},
keywords = {Computer-Mediated Communication, Emotional Awareness, Affective Computing, Computer Supported Cooperative Work},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830794,
author = {Souza, Cleidson and Santos, Dalcykelem B. and Dias, Klissiomara L. and Wainer, Jacques},
title = {A Model and Tool for Semi-Automatic Recording of Design Rationale in Software Diagrams},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {The purpose of this work is to present an annotation model for recording design rationale, and to describe ABCDE-DR, a prototype system which implements this model, in particular for the domain of object diagrams in software engineering. It supports: (i) semi-formal representation of DR, (ii) recording of design rationale in a semi-automatic manner through the reflection in action theory, and (iii) the integration between artifact and design rationale. Our model uses annotations as a means of cooperation among users and also representing design rationale information.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
pages = {306},
keywords = {design rationale, cooperative software design, cooperative problem solving, annotations, ABCDE-DR},
series = {SPIRE '99}
}

@inproceedings{10.5555/519452.830795,
author = {Mouro, Eduardo Zapico and Garcez, C\'{\i}cero Roberto and Borges, Marcos Roberto da Silva},
title = {A Groupware Tool to Support Participatory Business Process Reengineering},
year = {1999},
isbn = {0769502687},
publisher = {IEEE Computer Society},
address = {USA},
abstract = {Companies normally hire external consultants to carry out their Business Process Re-engineering. While this can be simple and low-cost, but most reengineering projects with this approach have failed. A low level of workers' involvement with a consequent resistance to changes, and a continuous dependency on external consultants are the main drawbacks. We developed a tool based on an alternative approach to BPR, where company workers play an active and important role in re-design the organization's processes in a cooperative style. The paper describes a CSCW tool for the third phase of the PAWS method that is responsible for increasing the alternatives and decide for a solution to the improvement of a business process.},
booktitle = {Proceedings of the String Processing and Information Retrieval Symposium &amp; International Workshop on Groupware},
