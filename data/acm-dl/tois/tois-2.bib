issue_date = {July 1999},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
volume = {17},
number = {3},
issn = {1046-8188},
url = {https://doi.org/10.1145/314516.314522},
doi = {10.1145/314516.314522},
