year = {2013},
isbn = {9783642369728},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-642-36973-5_105},
doi = {10.1007/978-3-642-36973-5_105},
abstract = {Search is currently undergoing a major paradigm shift away from the traditional document-centric "10 blue links" towards more explicit and actionable information. Recent advances in this area are Google's Knowledge Graph, Virtual Personal Assistants such as Siri and Google Now, as well as the now ubiquitous entity-oriented vertical search results for places, products, etc. Apart from novel query understanding methods, these developments are largely driven by structured data that is blended into the Web Search experience. We discuss efficient indexing and query processing techniques to work with large amounts of structured data. Finally, we present query interpretation and understanding methods to map user queries to these structured data sources.},
booktitle = {Proceedings of the 35th European Conference on Advances in Information Retrieval},
pages = {869–873},
numpages = {5},
keywords = {information retrieval, structured data, web of data},
