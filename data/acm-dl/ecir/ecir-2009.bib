title = {Exploiting Flickr Tags and Groups for Finding Landmark Photos},
year = {2009},
isbn = {9783642009570},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-642-00958-7_62},
