@inproceedings{10.1007/978-3-642-00958-7_22,
author = {Kim, Jinyoung and Xue, Xiaobing and Croft, W. Bruce},
title = {A Probabilistic Retrieval Model for Semistructured Data},
year = {2009},
isbn = {9783642009570},
publisher = {Springer-Verlag},
