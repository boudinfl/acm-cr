}

@inproceedings{10.1007/978-3-642-00958-7_84,
author = {Bolelli, Levent and Ertekin, \c{S}eyda and Giles, C. Lee},
title = {Topic and Trend Detection in Text Collections Using Latent Dirichlet Allocation},
year = {2009},
isbn = {9783642009570},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-642-00958-7_84},
doi = {10.1007/978-3-642-00958-7_84},
abstract = {Algorithms that enable the process of automatically mining distinct topics in document collections have become increasingly important due to their applications in many fields and the extensive growth of the number of documents in various domains. In this paper, we propose a generative model based on latent Dirichlet allocation that integrates the temporal ordering of the documents into the generative process in an iterative fashion. The document collection is divided into time segments where the discovered topics in each segment is propagated to influence the topic discovery in the subsequent time segments. Our experimental results on a collection of academic papers from CiteSeer repository show that segmented topic model can effectively detect distinct topics and their evolution over time.},
booktitle = {Proceedings of the 31th European Conference on IR Research on Advances in Information Retrieval},
pages = {776–780},
numpages = {5},
location = {Toulouse, France},
series = {ECIR '09}
}

@inproceedings{10.1007/978-3-642-00958-7_85,
author = {Henrich, Andreas and L\"{u}decke, Volker},
title = {Measuring Similarity of Geographic Regions for Geographic Information Retrieval},
year = {2009},
isbn = {9783642009570},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-642-00958-7_85},
doi = {10.1007/978-3-642-00958-7_85},
abstract = {Representations of geographic regions play a decisive role in geographic information retrieval, where the query is specified by a conceptual part and a geographic part. One aspect is to use them as query footprint which is then applied for the geographic ranking of documents. Users often specify textual descriptions of geographic regions that are not contained in the underlying gazetteer or geographic database. Approaches that automatically determine a geographic footprint for those locations have a strong need for measuring the quality of this footprint, for evaluation as well as for automatical parameter learning. This quality is determined by the 'similarity' between the footprint and a correct representation of that region.In this paper we introduce three domain-specific points of view for measuring the similarity between representations of geographic regions for geographic information retrieval. For each point of view (strict similarity, visual similarity and similarity in ranking) we introduce a dedicated measure, two of which are novel measures that we propose in this paper.},
booktitle = {Proceedings of the 31th European Conference on IR Research on Advances in Information Retrieval},
pages = {781–785},
numpages = {5},
location = {Toulouse, France},
series = {ECIR '09}
}

