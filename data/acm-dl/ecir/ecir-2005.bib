@inproceedings{10.1007/978-3-540-31865-1_30,
author = {Lehtokangas, Raija and Keskustalo, Heikki and J\"{a}rvelin, Kalervo},
title = {Dictionary-Based CLIR Loses Highly Relevant Documents},
year = {2005},
isbn = {3540252959},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-540-31865-1_30},
