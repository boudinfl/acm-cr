author = {Jiang, Xue-Mei and Song, Wen-Guan and Zeng, Hua-Jun},
title = {Applying Associative Relationship on the Clickthrough Data to Improve Web Search},
year = {2005},
isbn = {3540252959},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-540-31865-1_34},
