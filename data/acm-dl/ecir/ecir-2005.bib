pages = {300–314},
numpages = {15},
location = {Santiago de Compostela, Spain},
series = {ECIR'05}
}

@inproceedings{10.1007/978-3-540-31865-1_23,
author = {Suomela, Sari and Kek\"{a}l\"{a}inen, Jaana},
title = {Ontology as a Search-Tool: A Study of Real Users' Query Formulation with and without Conceptual Support},
year = {2005},
isbn = {3540252959},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-540-31865-1_23},
