@inproceedings{10.1007/978-3-642-12275-0_76,
author = {Bierig, Ralf and Cole, Michael and Gwizdka, Jacek and Belkin, Nicholas J.},
title = {A Data Analysis and Modelling Framework for the Evaluation of Interactive Information Retrieval},
year = {2010},
isbn = {3642122744},
publisher = {Springer-Verlag},
address = {Berlin, Heidelberg},
url = {https://doi.org/10.1007/978-3-642-12275-0_76},
