@inproceedings{10.1007/978-3-642-12275-0_61,
author = {Hu, Biyun and Li, Zhoujun and Wang, Jun},
title = {User's Latent Interest-Based Collaborative Filtering},
year = {2010},
isbn = {3642122744},
publisher = {Springer-Verlag},
