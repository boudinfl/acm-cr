@inproceedings{10.1145/2611040.2611044,
author = {Kagklis, Vasileios and Verykios, Vassilios S. and Tzimas, Giannis and Tsakalidis, Athanasios K.},
title = {Knowledge Sanitization on the Web},
year = {2014},
isbn = {9781450325387},
